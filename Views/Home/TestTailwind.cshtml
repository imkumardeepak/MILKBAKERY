@{
    ViewData["Title"] = "Test Tailwind CSS";
}

<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold text-blue-600 mb-4">Tailwind CSS Test</h1>
    <p class="text-lg text-gray-700 mb-4">If you can see this text styled with Tailwind CSS, the integration is working!</p>
    
    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-2">Styled Elements</h2>
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Button
        </button>
        <div class="mt-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
            <p>This is a success message styled with Tailwind CSS.</p>
        </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-red-100 p-4 rounded">
            <h3 class="font-bold text-red-800">Column 1</h3>
            <p class="text-red-600">This is the first column.</p>
        </div>
        <div class="bg-yellow-100 p-4 rounded">
            <h3 class="font-bold text-yellow-800">Column 2</h3>
            <p class="text-yellow-600">This is the second column.</p>
        </div>
        <div class="bg-purple-100 p-4 rounded">
            <h3 class="font-bold text-purple-800">Column 3</h3>
            <p class="text-purple-600">This is the third column.</p>
        </div>
    </div>
</div>