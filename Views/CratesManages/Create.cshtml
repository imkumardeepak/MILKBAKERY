@model Milk_Bakery.Models.CratesManage

@{
    ViewData["Title"] = "Create Crates Entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3">
    <div class="card mb-3">
        <div class="card-header text-white p-1" style="background-color:#FC2947;">
            <div class="d-flex align-items-baseline">
                <a asp-action="Index" class="btn btn-link text-white"><i class="fa fa-arrow-left"></i></a>
                <h5 class="mx-auto text-white text-2xl font-semibold">Create New Crates Entry</h5>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CustomerId" class="control-label">Customer</label>
                            <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId">
                                <option value="">-- Select Customer --</option>
                            </select>
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SegmentCode" class="control-label">Segment</label>
                            <select asp-for="SegmentCode" class="form-control" asp-items="ViewBag.SegmentCode">
                                <option value="">-- Select Segment --</option>
                            </select>
                            <span asp-validation-for="SegmentCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CratesTypeId" class="control-label">Crates Type</label>
                            <select asp-for="CratesTypeId" class="form-control" asp-items="ViewBag.CratesTypeId">
                                <option value="">-- Select Crates Type --</option>
                            </select>
                            <span asp-validation-for="CratesTypeId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DispDate" class="control-label">Dispatch Date</label>
                            <input asp-for="DispDate" class="form-control" />
                            <span asp-validation-for="DispDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Opening" class="control-label">Opening</label>
                            <input asp-for="Opening" class="form-control" />
                            <span asp-validation-for="Opening" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Outward" class="control-label">Outward</label>
                            <input asp-for="Outward" class="form-control" value="0" />
                            <span asp-validation-for="Outward" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Inward" class="control-label">Inward</label>
                            <input asp-for="Inward" class="form-control" value="0" />
                            <span asp-validation-for="Inward" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Balance" class="control-label">Balance</label>
                            <input asp-for="Balance" class="form-control" />
                            <span asp-validation-for="Balance" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}