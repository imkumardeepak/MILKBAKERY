@model Milk_Bakery.Models.CratesManage

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3">
    <div class="card mb-3">
        <div class="card-header text-white p-1" style="background-color:#FC2947;">
            <div class="d-flex align-items-baseline">
                <a asp-action="Index" class="btn btn-link text-white"><i class="fa fa-arrow-left"></i></a>
                <h5 class="mx-auto text-white text-2xl font-semibold">Crates Management</h5>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label asp-for="CustomerId" class="control-label"></label>
                                <select asp-for="CustomerId" class="form-control select2" asp-items="@ViewBag.customer" id="customerDropdown"></select>
                                <span asp-validation-for="CustomerId" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-6">
                                <label asp-for="SegmentCode" class="control-label"></label>
                                <select asp-for="SegmentCode" class="form-control" id="segmentDropdown">
                                    <option value="">----Select Segment----</option>
                                </select>
                                <span asp-validation-for="SegmentCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label asp-for="DispDate" class="control-label"></label>
                                <input asp-for="DispDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" readonly />
                                <span asp-validation-for="DispDate" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-6">
                                <label asp-for="CratesTypeId" class="control-label"></label>
                                <select asp-for="CratesTypeId" class="form-control" asp-items="@ViewBag.cratesType"></select>
                                <span asp-validation-for="CratesTypeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label asp-for="Opening" class="control-label"></label>
                                <input asp-for="Opening" class="form-control" />
                                <span asp-validation-for="Opening" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-6">
                                <label asp-for="Outward" class="control-label"></label>
                                <input asp-for="Outward" class="form-control" readonly value="0" />
                                <span asp-validation-for="Outward" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label asp-for="Inward" class="control-label"></label>
                                <input asp-for="Inward" class="form-control" readonly value="0" />
                                <span asp-validation-for="Inward" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-6">
                                <label asp-for="Balance" class="control-label"></label>
                                <input asp-for="Balance" class="form-control" readonly />
                                <span asp-validation-for="Balance" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="px-4 text-right py-2">
                            <a asp-action="Index" class="btn hover:bg-red-700 bg-red-600 rounded-sm shadow-md text-white">Back</a>
                            <input type="submit" value="Save Record" class="btn hover:bg-blue-700 bg-blue-600 rounded-sm shadow-md text-white" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Calculate balance when opening, inward, or outward values change
        $(document).ready(function () {
            $('#Opening, #Inward, #Outward').on('input', function () {
                calculateBalance();
            });

            // Handle customer dropdown change to load segments
            $('#customerDropdown').change(function () {
                var customerId = $(this).val();
                if (customerId) {
                    loadSegmentsForCustomer(customerId);
                } else {
                    $('#segmentDropdown').empty();
                    $('#segmentDropdown').append('<option value="">----Select Segment----</option>');
                }
            });
        });

        function calculateBalance() {
            var opening = parseInt($('#Opening').val()) || 0;
            var inward = parseInt($('#Inward').val()) || 0;
            var outward = parseInt($('#Outward').val()) || 0;
            var balance = opening + inward - outward;
            $('#Balance').val(balance);
        }

        function loadSegmentsForCustomer(customerId) {
            $.ajax({
                url: '@Url.Action("GetSegmentsForCustomer", "CratesManages")',
                type: 'GET',
                data: { customerId: customerId },
                success: function (result) {
                    $('#segmentDropdown').empty();
                    $('#segmentDropdown').append('<option value="">----Select Segment----</option>');
                    $.each(result, function (i, segment) {
                        $('#segmentDropdown').append($('<option></option>').val(segment.value).html(segment.text));
                    });
                },
                error: function () {
                    console.log('Error loading segments for customer');
                }
            });
        }
    </script>
}