@model Milk_Bakery.ViewModels.OpeningBalanceEntryViewModel

@{
    ViewData["Title"] = "Upload Bulk Opening Entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card-header-custom {
        background-color: #17a2b8;
        /* Blue color for opening */
        color: white;
        padding: 0.75rem 1rem;
    }

    .form-section {
        background-color: white;
        border-radius: 0.5rem;
        padding: 1rem;
        margin-bottom: 1rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .form-section-title {
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: #495057;
        border-bottom: 1px solid #dee2e6;
        padding-bottom: 0.5rem;
    }

    .customer-list-container {
        max-height: 60vh;
        overflow-y: auto;
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
    }

    .customer-item {
        padding: 0.75rem 1rem;
        border-bottom: 1px solid #e9ecef;
        transition: background-color 0.2s;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .customer-item:last-child {
        border-bottom: none;
    }

    .customer-item:hover {
        background-color: #f8f9fa;
    }

    .customer-name {
        font-weight: 500;
        color: #212529;
    }

    .opening-input {
        max-width: 120px;
        text-align: right;
    }

    .sticky-footer {
        position: sticky;
        bottom: 0;
        background-color: white;
        padding: 1rem 0;
        border-top: 1px solid #dee2e6;
        z-index: 10;
    }

    .file-upload-area {
        border: 2px dashed #ced4da;
        border-radius: 0.375rem;
        padding: 2rem;
        text-align: center;
        background-color: #f8f9fa;
        transition: border-color 0.2s;
        cursor: pointer;
    }

    .file-upload-area:hover {
        border-color: #17a2b8;
    }

    .file-upload-area.dragover {
        border-color: #17a2b8;
        background-color: #e8f4f8;
    }

    .file-upload-icon {
        font-size: 2.5rem;
        color: #6c757d;
        margin-bottom: 1rem;
    }

    .file-info {
        margin-top: 1rem;
        padding: 0.5rem;
        background-color: #e9ecef;
        border-radius: 0.25rem;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .form-section {
            padding: 0.75rem;
        }

        .customer-item {
            padding: 0.75rem 0.5rem;
            flex-direction: column;
            align-items: flex-start;
        }

        .customer-item .opening-input-group {
            width: 100%;
            margin-top: 0.5rem;
        }

        .opening-input {
            max-width: 100%;
            margin-top: 0.25rem;
        }

        .btn-group-responsive {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .btn-group-responsive .btn {
            width: 100%;
        }
    }

    .spinner-border-sm {
        width: 1rem;
        height: 1rem;
        border-width: 0.2em;
    }

    .empty-state {
        text-align: center;
        padding: 2rem;
        color: #6c757d;
    }

    .empty-state i {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: #ced4da;
    }

    .input-group-text {
        background-color: #e9ecef;
        border: 1px solid #ced4da;
        border-radius: 0.375rem 0 0 0.375rem;
        font-weight: 500;
    }

    .input-group {
        display: flex;
        align-items: stretch;
    }

    .input-group .form-control {
        border-radius: 0 0.375rem 0.375rem 0;
        border-left: none;
    }
</style>

<div class="container-fluid px-0">
    <div class="card mb-3">
        <div class="card-header card-header-custom p-2">
            <div class="d-flex align-items-center">
                <a asp-action="Index" class="btn btn-link text-white p-0 me-2">
                    <i class="fas fa-arrow-left fa-lg"></i>
                </a>
                <h5 class="mb-0 text-white flex-grow-1 text-center">Upload Bulk Opening Entry</h5>
            </div>
        </div>
        <div class="card-body p-0">
            <form asp-action="UploadBulkOpeningEntry" method="post" id="uploadOpeningEntryForm"
                enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-section">
                    <div class="form-section-title">
                        <i class="fas fa-filter me-2"></i>Entry Details
                    </div>
                    <div class="row g-3">
                        <div class="col-md-4 col-12">
                            <div class="form-group">
                                <label asp-for="SegmentCode" class="form-label fw-bold">Segment</label>
                                <select asp-for="SegmentCode" class="form-select form-control"
                                    asp-items="ViewBag.DivisionId" id="segmentCode">
                                    <option value="">-- Select Segment --</option>
                                </select>
                                <span asp-validation-for="SegmentCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 col-12">
                            <div class="form-group">
                                <label asp-for="CratesTypeId" class="form-label fw-bold">Crates Type</label>
                                <select asp-for="CratesTypeId" class="form-select form-control"
                                    asp-items="ViewBag.CratesTypeId">
                                    <option value="">-- Select Crates Type --</option>
                                </select>
                                <span asp-validation-for="CratesTypeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 col-12">
                            <div class="form-group">
                                <label asp-for="DispDate" class="form-label fw-bold">Dispatch Date</label>
                                <input asp-for="DispDate" class="form-control" type="date" readonly />
                                <span asp-validation-for="DispDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <div class="form-section-title">
                        <i class="fas fa-file-csv me-2"></i>Upload CSV File
                    </div>
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="form-group">
                                <label for="csvFile" class="form-label fw-bold">Select CSV File</label>
                                <div class="file-upload-area" id="fileUploadArea">
                                    <div class="file-upload-icon">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                    </div>
                                    <p class="mb-2">Drag & drop your CSV or Excel file here or click to browse</p>
                                    <p class="text-muted small">Supported formats: CSV, XLSX, XLS</p>
                                    <input type="file" id="csvFile" name="csvFile" class="d-none"
                                        accept=".csv,.xlsx,.xls,text/csv,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.ms-excel" />
                                    <button type="button" class="btn btn-outline-primary" id="browseButton">Browse
                                        Files</button>
                                </div>
                                <div id="fileInfo" class="file-info d-none">
                                    <span id="fileName"></span>
                                    <button type="button" class="btn btn-sm btn-outline-danger ms-2" id="removeFile">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                                <div class="form-text">Upload a CSV file with customer opening balances</div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group">
                                <label class="form-label fw-bold">Download Template</label>
                                <div class="alert alert-info">
                                    <p>Download a template file pre-filled with all customers for the selected segment.
                                        Enter opening balances in the third column and save as CSV.</p>
                                    <button type="button" class="btn btn-success" id="downloadTemplateBtn" disabled>
                                        <i class="fas fa-download me-2"></i>Download Excel Template
                                    </button>
                                    <div class="mt-2">
                                        <small class="text-muted">
                                            <strong>How to use:</strong>
                                            1. Select a segment above
                                            2. Click "Download Excel Template"
                                            3. Enter opening balances in the "Opening Balance" column
                                            4. Save as CSV and upload
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <div class="form-section-title">
                        <i class="fas fa-info-circle me-2"></i>CSV Format Instructions
                    </div>
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="alert alert-info">
                                <h6>File Format:</h6>
                                <p>The uploaded file should have the following columns in order:</p>
                                <ol>
                                    <li><strong>Customer ID</strong> - Numeric ID of the customer</li>
                                    <li><strong>Customer Name</strong> - Name of the customer</li>
                                    <li><strong>Opening Balance</strong> - Opening balance quantity</li>
                                </ol>
                                <p><strong>Example:</strong></p>
                                <pre class="bg-light p-2">101,ABC Customer,50
102,XYZ Customer,75
103,PQR Customer,100</pre>
                                <p class="mb-0">The first row (header) will be ignored if present.</p>
                            </div>

                            <div class="alert alert-warning">
                                <h6>How to Create File from Excel:</h6>
                                <ol>
                                    <li>Open Microsoft Excel or any spreadsheet application</li>
                                    <li>Enter your data in three columns: Customer ID, Customer Name, Opening Balance
                                    </li>
                                    <li>Ensure there are no headers in the data (or they will be ignored)</li>
                                    <li>Click on <strong>File</strong> > <strong>Save As</strong></li>
                                    <li>Choose file type as <strong>CSV (Comma delimited) (*.csv)</strong> or
                                        <strong>Excel Workbook (*.xlsx)</strong></li>
                                    <li>Click <strong>Save</strong></li>
                                    <li>Confirm any warnings about file format compatibility</li>
                                </ol>
                                <p class="mb-0"><strong>Note:</strong> Both CSV and Excel formats are supported.</p>
                            </div>

                            <div class="alert alert-success">
                                <h6>Using the Template Feature:</h6>
                                <ol>
                                    <li>Select a segment from the dropdown above</li>
                                    <li>Click the "Download Excel Template" button</li>
                                    <li>Open the downloaded CSV file in Excel (it will automatically be recognized as a
                                        spreadsheet)</li>
                                    <li>Enter opening balance values in the third column</li>
                                    <li>Save the file as CSV (Comma delimited) or Excel Workbook (*.xlsx)</li>
                                    <li>Upload the updated file using the file upload area</li>
                                </ol>
                                <p class="mb-0"><strong>Tip:</strong> The template is pre-filled with all customers for
                                    the selected segment, making data entry easier and more accurate.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="sticky-footer">
                    <div class="container-fluid">
                        <div class="d-grid gap-2 btn-group-responsive">
                            <button type="submit" class="btn btn-primary" id="uploadButton">
                                <i class="fas fa-upload me-2"></i>Upload and Process
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            const fileUploadArea = $('#fileUploadArea');
            const csvFileInput = $('#csvFile');
            const browseButton = $('#browseButton');
            const fileInfo = $('#fileInfo');
            const fileName = $('#fileName');
            const removeFile = $('#removeFile');
            const uploadButton = $('#uploadButton');
            const segmentDropdown = $('#segmentCode');
            const cratesTypeDropdown = $('#CratesTypeId');
            const downloadTemplateBtn = $('#downloadTemplateBtn');

            // Load crate types when segment changes
            segmentDropdown.on('change', function () {
                const segmentCode = $(this).val();
                if (segmentCode) {
                    loadCrateTypes(segmentCode);
                    // Enable template download button when segment is selected
                    downloadTemplateBtn.prop('disabled', false);
                } else {
                    cratesTypeDropdown.empty().append('<option value="">-- Select Crates Type --</option>');
                    // Disable template download button when no segment is selected
                    downloadTemplateBtn.prop('disabled', true);
                }
            });

            function loadCrateTypes(segmentCode) {
                cratesTypeDropdown.html('<option value="">Loading...</option>');

                $.ajax({
                    url: '@Url.Action("GetCrateTypesForSegment", "CratesManages")',
                    type: 'GET',
                    data: { segment: segmentCode },
                    success: function (crateTypes) {
                        cratesTypeDropdown.empty();
                        if (crateTypes && crateTypes.length > 0) {
                            for (let i = 0; i < crateTypes.length; i++) {
                                const crateType = crateTypes[i];
                                cratesTypeDropdown.append(`<option value="${crateType.value}">${crateType.text}</option>`);
                            }
                        } else {
                            cratesTypeDropdown.append('<option value="">No crate types found</option>');
                        }
                    },
                    error: function () {
                        cratesTypeDropdown.empty().append('<option value="">Error loading crate types</option>');
                    }
                });
            }

            // Handle template download
            downloadTemplateBtn.on('click', function () {
                const segmentCode = segmentDropdown.val();
                if (segmentCode) {
                    // Redirect to the template generation action
                    window.location.href = '@Url.Action("GenerateTemplate", "CratesManages")?segmentCode=' + encodeURIComponent(segmentCode);
                }
            });

            // Browse button click event
            browseButton.on('click', function () {
                csvFileInput.click();
            });

            // File input change event
            csvFileInput.on('change', function () {
                if (this.files && this.files[0]) {
                    displayFileInfo(this.files[0]);
                }
            });

            // Drag and drop events
            fileUploadArea.on('dragover', function (e) {
                e.preventDefault();
                $(this).addClass('dragover');
            });

            fileUploadArea.on('dragleave', function (e) {
                e.preventDefault();
                $(this).removeClass('dragover');
            });

            fileUploadArea.on('drop', function (e) {
                e.preventDefault();
                $(this).removeClass('dragover');

                if (e.originalEvent.dataTransfer.files && e.originalEvent.dataTransfer.files[0]) {
                    const file = e.originalEvent.dataTransfer.files[0];
                    if (file.type === 'text/csv' || file.name.endsWith('.csv')) {
                        // Create a new FileList with the dropped file
                        const dataTransfer = new DataTransfer();
                        dataTransfer.items.add(file);
                        csvFileInput[0].files = dataTransfer.files;
                        displayFileInfo(file);
                    } else {
                        alert('Please upload a valid CSV file.');
                    }
                }
            });

            // Remove file button click event
            removeFile.on('click', function () {
                csvFileInput.val('');
                fileInfo.addClass('d-none');
                fileUploadArea.removeClass('d-none');
            });

            // Form submit event
            $('#uploadOpeningEntryForm').on('submit', function () {
                const segmentCode = $('#segmentCode').val();
                const cratesTypeId = $('#CratesTypeId').val();
                const csvFile = csvFileInput[0].files[0];

                if (!segmentCode) {
                    alert('Please select a segment.');
                    return false;
                }

                if (!cratesTypeId) {
                    alert('Please select a crates type.');
                    return false;
                }

                if (!csvFile) {
                    alert('Please select a CSV file to upload.');
                    return false;
                }

                // Show loading state
                uploadButton.prop('disabled', true);
                uploadButton.html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Processing...');
            });

            // Function to display file info
            function displayFileInfo(file) {
                fileName.text(file.name + ' (' + formatFileSize(file.size) + ')');
                fileInfo.removeClass('d-none');
            }

            // Function to format file size
            function formatFileSize(bytes) {
                if (bytes === 0) return '0 Bytes';
                const k = 1024;
                const sizes = ['Bytes', 'KB', 'MB', 'GB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
            }
        });
    </script>
}