@model IEnumerable<Milk_Bakery.Models.CratesManage>

@{
    ViewData["Title"] = "Crates Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3">
    <div class="card mb-3">
        <div class="card-header text-white p-1" style="background-color:#FC2947;">
            <div class="d-flex align-items-baseline">
                <a href="/Home/Index" class="btn btn-link text-white"><i class="fa fa-arrow-left"></i></a>
                <h5 class="mx-auto text-white text-2xl font-semibold">Crates Management</h5>
                <a asp-action="Overview" class="btn btn-info text-white"><i class="fa fa-list"></i> Overview</a>
                <a asp-action="CratesInwardEntry" class="btn btn-success text-white"><i class="fa fa-plus"></i> Crates Inward Entry</a>
                <a asp-action="Create" class="btn btn-default text-white"><i class="fa fa-plus"></i> Add New</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-sm-6">
                    <label for="customerDropdown">Customer:</label>
                    <select id="customerDropdown" class="form-control" asp-items="ViewBag.CustomerList">
                        <option value="">All Customers</option>
                    </select>
                </div>
                <div class="form-group col-sm-6">
                    <label for="segmentDropdown">Segment:</label>
                    <select id="segmentDropdown" class="form-control" asp-items="ViewBag.SegmentList">
                        <option value="">All Segments</option>
                    </select>
                </div>
            </div>

            <div id="cratesTable">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Customer)
                                </th>
                                <th>
                                    Segment Name
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DispDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Opening)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Outward)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Inward)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Balance)
                                </th>
                                <th>
                                    Crates Type
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Customer.Name)
                                    </td>
                                    <td>
                                        @* Display the segment name based on customer-segment mapping *@
                                        @{
                                            var segmentName = ViewData["SegmentName_" + item.Id] as string ?? "N/A";
                                        }
                                        @segmentName
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DispDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Opening)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Outward)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Inward)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Balance)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CratesType.Cratestype)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize dataTable with specific options only if not already initialized
            if (!$.fn.DataTable.isDataTable("#dataTable")) {
                $('#dataTable').DataTable({
                    "order": [[3, "desc"]], // Sort by dispatch date descending by default
                    "pageLength": 25
                });
            }

            // Handle dropdown changes
            $('#customerDropdown, #segmentDropdown').change(function () {
                var customer = $('#customerDropdown').val();
                var segment = $('#segmentDropdown').val();

                // In a real implementation, you would make an AJAX call to filter the data
                // For now, we're just showing how the UI would work
                console.log("Filtering by customer: " + customer + ", segment: " + segment);
            });
        });
    </script>
}