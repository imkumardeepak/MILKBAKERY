@model IEnumerable<Milk_Bakery.Models.Cust2CustMap>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3">
    <div class="card mb-3">
          <div class="card-header bg-blue-500 text-white">
            <div class="d-flex align-items-baseline">
                <h5 class="mx-auto text-white text-2xl font-semibold">Customer Map</h5>
                <a asp-action="AddOrEdit" class="btn btn-success text-white"><i class="fas fa-plus-square"></i> Add</a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-sm" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.custname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phoneno)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.custname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phoneno)
            </td>
                                <td>
                                     <a asp-action="AddOrEdit" asp-route-id="@item.id" class="h-10 w-10 rounded-sm shadow-md text-white text-[16px] hover:bg-yellow-700 bg-yellow-600 btn"><i class="fas fa-pencil-alt"></i> </a>
                                     <a asp-action="Delete" asp-route-id="@item.id" class="h-10 w-10 rounded-sm shadow-md text-white text-[16px] hover:bg-red-700 bg-red-600 btn" onclick="return confirmation(this);"><i class="fas fa-trash-alt"></i></a>
                                </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
</div>
