@{
    ViewData["Title"] = "Dealer Outstanding";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-2">
    <div class="card mb-2">
        <div class="card-header text-white p-2" style="background-color:#007bff;">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-link text-white p-0 mr-2">
                        <i class="fa fa-arrow-left"></i>
                    </a>
                    <h5 class="mb-0 text-white font-weight-bold">Dealer Outstanding</h5>
                </div>
                <a href="@Url.Action("OutstandingReport", "DealerOutstanding")" class="btn btn-light btn-sm">
                    <i class="fas fa-file-alt"></i> Outstanding Report
                </a>
            </div>
        </div>
        <div class="card-body p-2">
            <div class="row mb-2">
                <div class="col-12 col-md-4 mb-2 mb-md-0">
                    <label for="customerFilter" class="form-label font-weight-bold mb-1">Select Customer:</label>
                    <select id="customerFilter" class="form-control form-control-sm select2">
                        <option value="">-- Select Customer --</option>
                    </select>
                </div>
                <div class="col-12 col-md-4 mb-2 mb-md-0">
                    <label for="dealerFilter" class="form-label font-weight-bold mb-1">Select Dealer:</label>
                    <select id="dealerFilter" class="form-control form-control-sm select2" disabled>
                        <option value="">-- Select Dealer --</option>
                    </select>
                </div>
                <div class="col-12 col-md-4 mb-2 mb-md-0">
                    <div class="d-flex flex-column h-100 justify-content-end">
                        <div class="d-flex justify-content-between justify-content-md-start align-items-center">
                            <button id="filterBtn" class="btn btn-primary btn-sm mr-1" disabled>
                                <i class="fas fa-filter"></i> <span class="d-none d-sm-inline">Filter</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table id="outstandingTable" class="table table-striped table-bordered table-sm" style="width:100%">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Dealer Name</th>
                                    <th>Last Invoice Date</th>
                                    <th>Invoice Amount</th>
                                    <th>Outstanding Amount</th>
                                    <th>Received Amount</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="6" class="text-center">Select a distributor and click Filter</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize Select2
            $('.select2').select2({
                width: '100%',
                placeholder: "-- Select --",
                allowClear: true
            });

            // Load customers
            loadCustomers();

            // Filter button click event
            $('#filterBtn').on('click', function () {
                loadData();
            });

            // Customer filter change event
            $('#customerFilter').on('change', function () {
                var customerId = $(this).val();
                if (customerId) {
                    loadDealers(customerId);
                    $('#dealerFilter').prop('disabled', false);
                } else {
                    $('#dealerFilter').empty().append('<option value="">-- Select Dealer --</option>').prop('disabled', true);
                    $('#filterBtn').prop('disabled', true);
                }
            });

            // Dealer filter change event
            $('#dealerFilter').on('change', function () {
                if ($(this).val()) {
                    $('#filterBtn').prop('disabled', false);
                } else {
                    $('#filterBtn').prop('disabled', true);
                }
            });

            function loadCustomers() {
                $.ajax({
                    url: '@Url.Action("GetCustomers", "DealerOutstanding")',
                    type: 'GET',
                    success: function (result) {
                        if (result.success) {
                            var select = $('#customerFilter');
                            select.empty().append('<option value="">-- Select Customer --</option>');

                            $.each(result.customers, function (index, customer) {
                                select.append('<option value="' + customer.id + '">' + customer.name + '</option>');
                            });
                        }
                    },
                    error: function () {
                        console.log('Error loading customers');
                    }
                });
            }

            function loadDealers(customerId) {
                $.ajax({
                    url: '@Url.Action("GetDealersByCustomer", "DealerOutstanding")',
                    type: 'GET',
                    data: { customerId: customerId },
                    success: function (result) {
                        if (result.success) {
                            var select = $('#dealerFilter');
                            select.empty().append('<option value="">-- Select Dealer --</option>');

                            $.each(result.dealers, function (index, dealer) {
                                select.append('<option value="' + dealer.id + '">' + dealer.name + '</option>');
                            });
                        }
                    },
                    error: function () {
                        console.log('Error loading dealers');
                    }
                });
            }

            function loadData() {
                var dealerId = $('#dealerFilter').val();

                // Validate that dealer is selected
                if (!dealerId) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Missing Filter',
                        text: 'Please select a dealer to load data.',
                        confirmButtonText: 'OK'
                    });
                    return;
                }

                $.ajax({
                    url: '@Url.Action("GetDealerOutstandingForToday", "DealerOutstanding")',
                    type: 'GET',
                    data: {
                        dealerId: dealerId
                    },
                    success: function (result) {
                        var tbody = $('#outstandingTable tbody');
                        tbody.empty();

                        if (result.success && result.outstanding) {
                            var item = result.outstanding;
                            var row = '<tr data-dealer-id="' + item.dealerId + '">' +
                                '<td>' + item.dealerName + '</td>' +
                                '<td>' + item.deliverDate + '</td>' +
                                '<td>₹' + item.invoiceAmount.toFixed(2) + '</td>' +
                                '<td>₹' + item.outstandingAmount.toFixed(2) + '</td>' +
                                '<td>' +
                                '<div class="input-group input-group-sm">' +
                                '<input type="number" class="form-control form-control-sm received-amount" ' +
                                'value="' + item.receivedAmount + '" min="0" step="0.01" style="width: 100px;">' +
                                '</div>' +
                                '</td>' +
                                '<td>' +
                                '<button class="btn btn-outline-primary btn-sm save-received-btn" type="button">Save</button>' +
                                '</td>' +
                                '</tr>';
                            tbody.append(row);
                            $('#outstandingReportBtn').prop('disabled', false);
                        } else {
                            tbody.append('<tr><td colspan="6" class="text-center">No orders today</td></tr>');
                        }
                    }
                });
            }

            // Handle save received amount button click
            $(document).on('click', '.save-received-btn', function () {
                var row = $(this).closest('tr');
                var dealerId = row.data('dealer-id');
                var receivedAmount = parseFloat(row.find('.received-amount').val()) || 0;

                if (dealerId && receivedAmount >= 0) {
                    $.ajax({
                        url: '@Url.Action("SaveReceivedAmount", "DealerOutstanding")',
                        type: 'POST',
                        data: {
                            dealerId: dealerId,
                            receivedAmount: receivedAmount
                        },
                        success: function (result) {
                            if (result.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Saved!',
                                    text: result.message,
                                    confirmButtonText: 'OK',
                                    timer: 1500,
                                    timerProgressBar: true,
                                    showConfirmButton: false
                                 });
                                 loadData(); // Reload data after successful save
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: result.message,
                                    confirmButtonText: 'OK'
                                });
                            }
                        },
                        error: function () {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'An error occurred while saving the received amount.',
                                confirmButtonText: 'OK'
                            });
                        }
                    });
                } else {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Invalid Input',
                        text: 'Please enter a valid received amount.',
                        confirmButtonText: 'OK'
                    });
                }
            });
        });
    </script>

    <style>
        /* Responsive adjustments for small screens */
        @@media (max-width: 575.98px) {
            .card-body {
                padding: 0.5rem !important;
            }

            .form-group {
                margin-bottom: 0.75rem;
            }

            .mb-2 {
                margin-bottom: 0.5rem !important;
            }

            .p-2 {
                padding: 0.5rem !important;
            }

            .table th, .table td {
                padding: 0.25rem !important;
                font-size: 0.8rem;
            }

            .btn {
                padding: 0.25rem 0.5rem;
                font-size: 0.8rem;
            }
        }
    </style>
}