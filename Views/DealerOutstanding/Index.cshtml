@{
    ViewData["Title"] = "Dealer Outstanding";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-2">
    <div class="card mb-2">
        <div class="card-header text-white p-2" style="background-color:#007bff;">
            <div class="d-flex align-items-center">
                <a href="@Url.Action("Index", "Home")" class="btn btn-link text-white p-0 mr-2">
                    <i class="fa fa-arrow-left"></i>
                </a>
                <h5 class="mb-0 text-white font-weight-bold">Dealer Outstanding</h5>
            </div>
        </div>
        <div class="card-body p-2">
            <div class="row mb-2">
                <div class="col-12 col-md-4 mb-2 mb-md-0">
                    <label for="distributorFilter" class="form-label font-weight-bold mb-1">Select Distributor:</label>
                    <select id="distributorFilter" class="form-control form-control-sm select2">
                        <option value="">-- Select Distributor --</option>
                    </select>
                </div>
                <div class="col-12 col-md-4 mb-2 mb-md-0">
                    <div class="d-flex flex-column h-100 justify-content-end">
                        <div class="d-flex justify-content-between justify-content-md-start align-items-center">
                            <button id="filterBtn" class="btn btn-primary btn-sm mr-1" disabled>
                                <i class="fas fa-filter"></i> <span class="d-none d-sm-inline">Filter</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table id="outstandingTable" class="table table-striped table-bordered table-sm" style="width:100%">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Dealer Name</th>
                                    <th>Last Invoice Date</th>
                                    <th>Invoice Amount</th>
                                    <th>Outstanding Amount</th>
                                    <th>Received Amount</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="6" class="text-center">Select a distributor and click Filter</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize Select2
            $('.select2').select2({
                width: '100%',
                placeholder: "-- Select Distributor --",
                allowClear: true
            });

            // Load distributors
            loadDistributors();

            // Filter button click event
            $('#filterBtn').on('click', function () {
                loadData();
            });

            // Distributor filter change event
            $('#distributorFilter').on('change', function () {
                if ($(this).val()) {
                    $('#filterBtn').prop('disabled', false);
                } else {
                    $('#filterBtn').prop('disabled', true);
                }
            });

            function loadDistributors() {
                $.ajax({
                    url: '@Url.Action("GetDistributors", "DealerOutstanding")',
                    type: 'GET',
                    success: function (result) {
                        if (result.success) {
                            var select = $('#distributorFilter');
                            select.empty().append('<option value="">-- Select Distributor --</option>');

                            $.each(result.distributors, function (index, distributor) {
                                select.append('<option value="' + distributor.id + '">' + distributor.name + '</option>');
                            });
                        }
                    },
                    error: function () {
                        console.log('Error loading distributors');
                    }
                });
            }

            function loadData() {
                var distributorId = $('#distributorFilter').val();

                // Validate that distributor is selected
                if (!distributorId) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Missing Filter',
                        text: 'Please select a distributor to load data.',
                        confirmButtonText: 'OK'
                    });
                    return;
                }

                $.ajax({
                    url: '@Url.Action("GetDealerOutstandings", "DealerOutstanding")',
                    type: 'GET',
                    data: {
                        distributorId: distributorId
                    },
                    success: function (result) {
                        if (result.success) {
                            var tbody = $('#outstandingTable tbody');
                            tbody.empty();

                            if (result.outstandings && result.outstandings.length > 0) {
                                $.each(result.outstandings, function (index, item) {
                                    var row = '<tr data-dealer-id="' + item.dealerId + '">' +
                                        '<td>' + item.dealerName + '</td>' +
                                        '<td>' + item.deliverDate + '</td>' +
                                        '<td>₹' + item.invoiceAmount.toFixed(2) + '</td>' +
                                        '<td>₹' + item.outstandingAmount.toFixed(2) + '</td>' +
                                        '<td>' +
                                        '<div class="input-group input-group-sm">' +
                                        '<input type="number" class="form-control form-control-sm received-amount" ' +
                                        'value="' + item.receivedAmount + '" min="0" step="0.01" style="width: 100px;">' +
                                        '<div class="input-group-append">' +
                                        '<button class="btn btn-outline-primary btn-sm save-received-btn" type="button">Save</button>' +
                                        '</div>' +
                                        '</div>' +
                                        '</td>' +
                                        '<td></td>' +
                                        '</tr>';
                                    tbody.append(row);
                                });
                            } else {
                                tbody.append('<tr><td colspan="6" class="text-center">No data found</td></tr>');
                            }
                        } else {
                            $('#outstandingTable tbody').empty().append('<tr><td colspan="6" class="text-center">Error: ' + result.message + '</td></tr>');
                        }
                    },
                    error: function () {
                        $('#outstandingTable tbody').empty().append('<tr><td colspan="6" class="text-center">Error loading data</td></tr>');
                    }
                });
            }

            // Handle save received amount button click
            $(document).on('click', '.save-received-btn', function () {
                var row = $(this).closest('tr');
                var dealerId = row.data('dealer-id');
                var receivedAmount = parseFloat(row.find('.received-amount').val()) || 0;

                if (dealerId && receivedAmount >= 0) {
                    $.ajax({
                        url: '@Url.Action("SaveReceivedAmount", "DealerOutstanding")',
                        type: 'POST',
                        data: {
                            dealerId: dealerId,
                            receivedAmount: receivedAmount
                        },
                        success: function (result) {
                            if (result.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Saved!',
                                    text: result.message,
                                    confirmButtonText: 'OK',
                                    timer: 1500,
                                    timerProgressBar: true,
                                    showConfirmButton: false
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: result.message,
                                    confirmButtonText: 'OK'
                                });
                            }
                        },
                        error: function () {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'An error occurred while saving the received amount.',
                                confirmButtonText: 'OK'
                            });
                        }
                    });
                } else {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Invalid Input',
                        text: 'Please enter a valid received amount.',
                        confirmButtonText: 'OK'
                    });
                }
            });
        });
    </script>

    <style>
        /* Responsive adjustments for small screens */
        @@media (max-width: 575.98px) {
            .card-body {
                padding: 0.5rem !important;
            }

            .form-group {
                margin-bottom: 0.75rem;
            }

            .mb-2 {
                margin-bottom: 0.5rem !important;
            }

            .p-2 {
                padding: 0.5rem !important;
            }

            .table th, .table td {
                padding: 0.25rem !important;
                font-size: 0.8rem;
            }

            .btn {
                padding: 0.25rem 0.5rem;
                font-size: 0.8rem;
            }
        }
    </style>
}