@model IEnumerable<CratesType>

@{
    ViewData["Title"] = "Crates List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto p-2">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">

        <div class="flex items-center justify-between p-3 bg-gray-800">
            <h2 class="text-white text-xl font-bold">Crates Types</h2>
            <a asp-action="AddOrEdit" class="inline-flex items-center justify-center px-3 py-1.5 text-xs font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700 transition duration-150 ease-in-out shadow-md">
                <i class="fas fa-plus mr-2"></i> Add New Crate
            </a>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-100">
                    <tr>
                        <th scope="col" class="px-4 py-2 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.Cratestype)
                        </th>
                        <th scope="col" class="px-4 py-2 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.Width)
                        </th>
                        <th scope="col" class="px-4 py-2 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.Height)
                        </th>
                        <th scope="col" class="px-4 py-2 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.Length)
                        </th>
                        <th scope="col" class="px-4 py-2 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50 transition-colors duration-150 ease-in-out">
                            <td class="px-4 py-2 whitespace-nowrap text-xs text-gray-900">
                                @Html.DisplayFor(modelItem => item.Cratestype)
                            </td>
                            <td class="px-4 py-2 whitespace-nowrap text-xs text-gray-900">
                                @Html.DisplayFor(modelItem => item.Width)
                            </td>
                            <td class="px-4 py-2 whitespace-nowrap text-xs text-gray-900">
                                @Html.DisplayFor(modelItem => item.Height)
                            </td>
                            <td class="px-4 py-2 whitespace-nowrap text-xs text-gray-900">
                                @Html.DisplayFor(modelItem => item.Length)
                            </td>
                            <td class="px-4 py-2 whitespace-nowrap text-center text-xs font-medium">
                                <a asp-action="AddOrEdit" asp-route-id="@item.Id" class="text-yellow-500 hover:text-yellow-700 mx-1">
                                    <i class="fas fa-edit fa-sm"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-800 mx-1" onclick="return confirmation(this);">
                                    <i class="fas fa-trash-alt fa-sm"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>