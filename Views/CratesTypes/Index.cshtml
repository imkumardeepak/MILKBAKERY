@model IEnumerable<Milk_Bakery.Models.CratesType>

@{
    ViewData["Title"] = "Crates Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3">
    <div class="card mb-3">
        <div class="card-header text-white p-1" style="background-color:#FC2947;">
            <div class="d-flex align-items-baseline">
                <a href="/Home/Index" class="btn btn-link text-white"><i class="fa fa-arrow-left"></i></a>
                <h5 class="mx-auto text-white text-2xl font-semibold">Crates Types</h5>
                <a asp-action="AddOrEdit" class="btn btn-default text-white"><i class="fa fa-plus"></i> Add New</a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Cratestype)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Division)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Width)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Height)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Length)
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cratestype)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Division)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Width)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Height)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Length)
                                </td>
                                <td>
                                    <a asp-action="AddOrEdit" asp-route-id="@item.Id"
                                        class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                                        onclick="return confirmation(this);">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>