@model Milk_Bakery.ViewModels.DealerOrderViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Add Or Edit Dealer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w-full bg-white shadow-lg rounded-lg overflow-hidden mt-2">
    <div class="bg-blue-500 px-2 py-2 flex items-center justify-between">
        <h2 class="text-white text-2xl font-semibold">Dealer Master</h2>
        <a asp-action="Index" class="h-10 w-32 rounded-sm shadow-md text-white text-[16px] hover:bg-red-700 bg-red-600 btn">Back</a>
    </div>
    <div class="p-2">
        <div class="w-screen-lg mt-2">
            <form asp-action="AddOrEdit" method="post" id="dealerForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="DealerMaster.Id" value="@Model.DealerMaster.Id" />
                <input type="hidden" name="id" value="@Model.DealerMaster.Id" />
                <input type="hidden" name="submit" value="Save" />
                <div class="md:grid grid-cols-12 flex flex-col md:items-center gap-4 p-2">
                    <div class="col-span-1 relative">
                        <span class="absolute bg-white left-3 -top-[12px] px-2">Id</span>
                        <input asp-for="DealerMaster.Id" class="text-[12px] h-10 text-gray-700 bg-light w-full border-2 px-2 rounded-sm" readonly />
                    </div>
                    <div class="col-span-6 relative">
                        <span class="absolute bg-white left-3 -top-[12px] px-2">Customer<span class="text-red-500">*</span></span>
                        <select asp-for="DealerMaster.DistributorId" id="customerSelect" class="text-[13px] h-10 text-gray-700 w-full border-2 px-2 rounded-sm">
                            @if (ViewBag.Customers != null)
                            {
                                @foreach (SelectListItem customer in ViewBag.Customers)
                                {
                                    <option value="@customer.Value">@customer.Text</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="DealerMaster.DistributorId" class="text-danger"></span>
                    </div>
                    <div class="col-span-5 relative">
                        <span class="absolute bg-white left-3 -top-[12px] px-2">Name<span class="text-red-500">*</span></span>
                        <input asp-for="DealerMaster.Name" class="text-[13px] h-10 text-gray-700 w-full border-2 px-2 rounded-sm" />
                        <span asp-validation-for="DealerMaster.Name" class="text-danger"></span>
                    </div>
                    <div class="col-span-4 relative">
                        <span class="absolute bg-white left-3 -top-[12px] px-2">Route Code<span class="text-red-500">*</span></span>
                        <input asp-for="DealerMaster.RouteCode" id="routeCode" class="text-[13px] h-10 text-gray-700 w-full border-2 px-2 rounded-sm" readonly />
                        <span asp-validation-for="DealerMaster.RouteCode" class="text-danger"></span>
                    </div>
                    <div class="col-span-8 relative">
                        <span class="absolute bg-white left-3 -top-[12px] px-2">Address<span class="text-red-500">*</span></span>
                        <input asp-for="DealerMaster.Address" class="text-[13px] h-10 text-gray-700 w-full border-2 px-2 rounded-sm" />
                        <span asp-validation-for="DealerMaster.Address" class="text-danger"></span>
                    </div>
                    <div class="col-span-4 relative">
                        <span class="absolute bg-white left-3 -top-[12px] px-2">City<span class="text-red-500">*</span></span>
                        <input asp-for="DealerMaster.City" class="text-[13px] h-10 text-gray-700 w-full border-2 px-2 rounded-sm" />
                        <span asp-validation-for="DealerMaster.City" class="text-danger"></span>
                    </div>
                    <div class="col-span-4 relative">
                        <span class="absolute bg-white left-3 -top-[12px] px-2">Phone No<span class="text-red-500">*</span></span>
                        <input asp-for="DealerMaster.PhoneNo" class="text-[13px] h-10 text-gray-700 w-full border-2 px-2 rounded-sm" />
                        <span asp-validation-for="DealerMaster.PhoneNo" class="text-danger"></span>
                    </div>
                    <div class="col-span-4 relative">
                        <span class="absolute bg-white left-3 -top-[12px] px-2">Email</span>
                        <input asp-for="DealerMaster.Email" class="text-[13px] h-10 text-gray-700 w-full border-2 px-2 rounded-sm" />
                        <span asp-validation-for="DealerMaster.Email" class="text-danger"></span>
                    </div>
                </div>
                
                <!-- Materials Section -->
                <div class="mt-4 p-2 border border-gray-300 rounded">
                    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4 gap-2">
                        <h3 class="text-lg font-semibold">Basic Orders</h3>
                        <div class="flex flex-wrap gap-2">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                <span class="mr-1">Selected:</span>
                                <span id="selectedCount" class="font-bold">0</span>
                            </span>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                <span class="mr-1">Total Quantity:</span>
                                <span id="totalQuantity" class="font-bold">0</span>
                            </span>
                        </div>
                    </div>
                    
                    <!-- Materials Table (removed mobile cards, keeping only table) -->
                    <div class="table-responsive">
                        <div class="max-h-96 overflow-y-auto">
                            <table class="w-full divide-y divide-gray-200">
                                <thead class="bg-gray-200 sticky top-0">
                                    <tr>
                                        <th scope="col" class="px-2 py-2 text-xs font-medium text-black-800 uppercase tracking-wider">Select</th>
                                        <!-- Removed Material Name column for small screens -->
                                        <th scope="col" class="px-2 py-2 text-xs font-medium text-black-800 uppercase tracking-wider hidden sm:table-cell">Material Name</th>
                                        <th scope="col" class="px-2 py-2 text-xs font-medium text-black-800 uppercase tracking-wider">Short Name</th>
                                        <th scope="col" class="px-2 py-2 text-xs font-medium text-black-800 uppercase tracking-wider">Quantity</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    @for (int i = 0; i < Model.AvailableMaterials.Count; i++)
                                    {
                                        var material = Model.AvailableMaterials[i];
                                        var isSelected = Model.SelectedMaterialIds != null && Model.SelectedMaterialIds.Contains(material.Id);
                                        var quantity = isSelected && Model.MaterialQuantities.ContainsKey(material.Id) ? Model.MaterialQuantities[material.Id] : 0;
                                        
                                        <tr>
                                            <td class="px-2 py-2 whitespace-nowrap">
                                                <input type="checkbox" 
                                                       name="SelectedMaterialIds" 
                                                       value="@material.Id" 
                                                       @(isSelected ? "checked" : "") 
                                                       class="material-checkbox" 
                                                       data-material-id="@material.Id" />
                                            </td>
                                            <!-- Removed Material Name column for small screens -->
                                            <td class="px-2 py-2 whitespace-nowrap hidden sm:table-cell">
                                                @material.Materialname
                                                <input type="hidden" name="AvailableMaterials[@i].Id" value="@material.Id" />
                                                <input type="hidden" name="AvailableMaterials[@i].Materialname" value="@material.Materialname" />
                                                <input type="hidden" name="AvailableMaterials[@i].ShortName" value="@material.ShortName" />
                                            </td>
                                            <td class="px-2 py-2 whitespace-nowrap">@material.ShortName</td>
                                            <td class="px-2 py-2 whitespace-nowrap">
                                                <input type="number" 
                                                       name="MaterialQuantities[@material.Id]" 
                                                       value="@quantity" 
                                                       min="0" 
                                                       class="text-[13px] h-8 text-gray-700 w-20 border-2 px-2 rounded-sm material-quantity" 
                                                       data-material-id="@material.Id" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
                <div class="px-4 text-right py-2 mt-4">
                    <input type="submit" value="Save" class="h-10 w-32 rounded-sm shadow-md text-white text-[16px] hover:bg-green-700 bg-green-600 btn" />
                    <a asp-action="Index" class="h-10 w-32 rounded-sm shadow-md text-white text-[16px] hover:bg-red-700 bg-red-600 btn">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/dealer-masters.js"></script>
}