@model Milk_Bakery.Models.DealerMaster

@{
    ViewData["Title"] = "Dealer Details";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Dealer Details</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="d-none d-sm-inline-block btn btn-sm btn-warning shadow-sm">
                <i class="fas fa-edit fa-sm text-white-50"></i> Edit
            </a>
            <a asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Dealer Information</h6>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Id)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Id)
                        </dd>
                        <dt class="col-sm-3">
                            Customer
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DistributorId)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.RouteCode)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.RouteCode)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Address)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Address)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.City)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.City)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.PhoneNo)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.PhoneNo)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Add New Basic Order Form -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Add New Basic Order</h6>
                </div>
                <div class="card-body">
                    <form asp-action="AddBasicOrder" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" name="DealerId" value="@Model.Id" />
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="MaterialName" class="control-label">Material Name</label>
                                    <select name="MaterialName" class="form-control" id="materialSelect" onchange="fillMaterialDetails()">
                                        <option value="">-- Select Material --</option>
                                        @foreach (var material in ViewBag.Materials)
                                        {
                                            <option value="@material.Materialname" 
                                                    data-sapcode="@material.material3partycode" 
                                                    data-shortcode="@material.ShortName">
                                                @material.Materialname
                                            </option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="SapCode" class="control-label">SAP Code</label>
                                    <input name="SapCode" id="SapCode" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="ShortCode" class="control-label">Short Code</label>
                                    <input name="ShortCode" id="ShortCode" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="Quantity" class="control-label">Quantity</label>
                                    <input name="Quantity" type="number" class="form-control" min="1" required />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="BasicAmount" class="control-label">Basic Amount</label>
                                    <input name="BasicAmount" type="number" step="0.01" class="form-control" min="0.01" required />
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    <label class="control-label">&nbsp;</label>
                                    <input type="submit" value="Add" class="btn btn-primary btn-block" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Basic Orders Table -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Basic Orders</h6>
                </div>
                <div class="card-body">
                    @if (Model.DealerBasicOrders != null && Model.DealerBasicOrders.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" id="ordersTable">
                                <thead>
                                    <tr>
                                        <th>Material Name</th>
                                        <th>SAP Code</th>
                                        <th>Short Code</th>
                                        <th>Quantity</th>
                                        <th>Basic Amount</th>
                                        <th>Total Amount</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.DealerBasicOrders)
                                    {
                                        <tr>
                                            <td>@order.MaterialName</td>
                                            <td>@order.SapCode</td>
                                            <td>@order.ShortCode</td>
                                            <td>@order.Quantity</td>
                                            <td>@order.BasicAmount.ToString("C")</td>
                                            <td>@(order.Quantity * order.BasicAmount)</td>
                                            <td>
                                                <!-- Edit Order Form -->
                                                <button class="btn btn-warning btn-circle btn-sm" onclick="editOrder(@order.Id, '@order.MaterialName', '@order.SapCode', '@order.ShortCode', @order.Quantity, @order.BasicAmount)">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <!-- Delete Order Form -->
                                                <form asp-action="DeleteBasicOrder" method="post" style="display: inline;">
                                                    <input type="hidden" name="id" value="@order.Id" />
                                                    <button type="submit" class="btn btn-danger btn-circle btn-sm" onclick="return confirm('Are you sure you want to delete this order?')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p>No basic orders found for this dealer.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Order Modal -->
<div class="modal fade" id="editOrderModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="EditBasicOrder" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Basic Order</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" id="editOrderId" name="Id" />
                    <input type="hidden" id="editDealerId" name="DealerId" value="@Model.Id" />
                    <div class="form-group">
                        <label for="editMaterialName" class="control-label">Material Name</label>
                        <select id="editMaterialName" name="MaterialName" class="form-control" onchange="fillEditMaterialDetails()">
                            <option value="">-- Select Material --</option>
                            @foreach (var material in ViewBag.Materials)
                            {
                                <option value="@material.Materialname" 
                                        data-sapcode="@material.material3partycode" 
                                        data-shortcode="@material.ShortName">
                                    @material.Materialname
                                </option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="editSapCode" class="control-label">SAP Code</label>
                        <input id="editSapCode" name="SapCode" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label for="editShortCode" class="control-label">Short Code</label>
                        <input id="editShortCode" name="ShortCode" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label for="editQuantity" class="control-label">Quantity</label>
                        <input id="editQuantity" name="Quantity" type="number" class="form-control" min="1" required />
                    </div>
                    <div class="form-group">
                        <label for="editBasicAmount" class="control-label">Basic Amount</label>
                        <input id="editBasicAmount" name="BasicAmount" type="number" step="0.01" class="form-control" min="0.01" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function fillMaterialDetails() {
            var select = document.getElementById("materialSelect");
            var selectedOption = select.options[select.selectedIndex];
            document.getElementById("SapCode").value = selectedOption.getAttribute("data-sapcode");
            document.getElementById("ShortCode").value = selectedOption.getAttribute("data-shortcode");
        }

        function fillEditMaterialDetails() {
            var select = document.getElementById("editMaterialName");
            var selectedOption = select.options[select.selectedIndex];
            document.getElementById("editSapCode").value = selectedOption.getAttribute("data-sapcode");
            document.getElementById("editShortCode").value = selectedOption.getAttribute("data-shortcode");
        }

        function editOrder(id, materialName, sapCode, shortCode, quantity, basicAmount) {
            document.getElementById('editOrderId').value = id;
            document.getElementById('editMaterialName').value = materialName;
            document.getElementById('editSapCode').value = sapCode;
            document.getElementById('editShortCode').value = shortCode;
            document.getElementById('editQuantity').value = quantity;
            document.getElementById('editBasicAmount').value = basicAmount;
            $('#editOrderModal').modal('show');
        }

        $(document).ready(function () {
            $('#ordersTable').DataTable({
                "order": [[0, "asc"]],
                "pageLength": 10,
                "responsive": true
            });
        });
    </script>
}