@model Milk_Bakery.Models.DealerMaster

@{
    ViewData["Title"] = "Delete Dealer";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Delete Dealer</h1>
        <a asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to List
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow mb-4 border-left-danger">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-danger">Are you sure you want to delete this dealer?</h6>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Id)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Id)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.DistributorId)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DistributorId)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.RouteCode)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.RouteCode)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.City)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.City)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.PhoneNo)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.PhoneNo)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>

            @if (Model.DealerBasicOrders != null && Model.DealerBasicOrders.Count > 0)
            {
                <div class="card shadow mb-4 border-left-warning">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-warning">Associated Orders (@Model.DealerBasicOrders.Count)</h6>
                    </div>
                    <div class="card-body">
                        <p class="text-warning">
                            <i class="fas fa-exclamation-triangle"></i> Deleting this dealer will also delete @Model.DealerBasicOrders.Count associated basic orders.
                        </p>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Material Name</th>
                                        <th>Quantity</th>
                                        <th>Basic Amount</th>
                                        <th>Total Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.DealerBasicOrders)
                                    {
                                        <tr>
                                            <td>@order.MaterialName</td>
                                            <td>@order.Quantity</td>
                                            <td>@order.BasicAmount.ToString("C")</td>
                                            <td>@(order.Quantity * order.BasicAmount)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>