@model Milk_Bakery.Models.DealerMaster

@{
    ViewData["Title"] = "Delete Dealer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w-full bg-white shadow-lg rounded-lg overflow-hidden mt-2">
    <div class="bg-blue-500 px-2 py-2 flex items-center justify-between">
        <h2 class="text-white text-2xl font-semibold">Dealer Master</h2>
        <a asp-action="Index" class="h-10 w-32 rounded-sm shadow-md text-white text-[16px] hover:bg-red-700 bg-red-600 btn">Back</a>
    </div>
    <div class="p-2">
        <div class="w-screen-lg mt-2">
            <div class="bg-red-50 p-4 mb-4 rounded-sm">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800">
                            Are you sure you want to delete this dealer?
                        </h3>
                    </div>
                </div>
            </div>
            <div class="md:grid grid-cols-12 flex flex-col md:items-center gap-4 p-2">
                <div class="col-span-1 relative">
                    <span class="absolute bg-white left-3 -top-[12px] px-2">Id</span>
                    <input value="@Html.DisplayFor(model => model.Id)" class="text-[12px] h-10 text-gray-700 bg-light w-full border-2 px-2 rounded-sm" readonly />
                </div>
                <div class="col-span-6 relative">
                    <span class="absolute bg-white left-3 -top-[12px] px-2">Customer</span>
                    <input value="@Html.DisplayFor(model => model.DistributorId)" class="text-[13px] h-10 text-gray-700 w-full border-2 px-2 rounded-sm" readonly />
                </div>
                <div class="col-span-5 relative">
                    <span class="absolute bg-white left-3 -top-[12px] px-2">Name</span>
                    <input value="@Html.DisplayFor(model => model.Name)" class="text-[13px] h-10 text-gray-700 w-full border-2 px-2 rounded-sm" readonly />
                </div>
                <div class="col-span-4 relative">
                    <span class="absolute bg-white left-3 -top-[12px] px-2">Route Code</span>
                    <input value="@Html.DisplayFor(model => model.RouteCode)" class="text-[13px] h-10 text-gray-700 w-full border-2 px-2 rounded-sm" readonly />
                </div>
                <div class="col-span-4 relative">
                    <span class="absolute bg-white left-3 -top-[12px] px-2">Phone No</span>
                    <input value="@Html.DisplayFor(model => model.PhoneNo)" class="text-[13px] h-10 text-gray-700 w-full border-2 px-2 rounded-sm" readonly />
                </div>
                <div class="col-span-12 relative">
                    <span class="absolute bg-white left-3 -top-[12px] px-2">Email</span>
                    <input value="@Html.DisplayFor(model => model.Email)" class="text-[13px] h-10 text-gray-700 w-full border-2 px-2 rounded-sm" readonly />
                </div>
            </div>
            <form asp-action="Delete" class="mt-6">
                <input type="hidden" asp-for="Id" />
                <div class="flex items-center justify-end space-x-3">
                    <input type="submit" value="Delete" class="h-10 w-32 rounded-sm shadow-md text-white text-[16px] hover:bg-red-700 bg-red-600 btn" />
                    <a asp-action="Index" class="h-10 w-32 rounded-sm shadow-md text-white text-[16px] hover:bg-gray-700 bg-gray-600 btn">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@if (Model.DealerBasicOrders != null && Model.DealerBasicOrders.Count > 0)
{
    <div class="w-full bg-white shadow-lg rounded-lg overflow-hidden mt-2">
        <div class="bg-yellow-500 px-2 py-2 flex items-center justify-between">
            <h2 class="text-white text-2xl font-semibold">Associated Orders (@Model.DealerBasicOrders.Count)</h2>
        </div>
        <div class="p-2">
            <div class="w-screen-lg mt-2">
                <div class="rounded-md bg-yellow-50 p-4 mb-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-yellow-800">
                                Warning
                            </h3>
                            <div class="mt-2 text-sm text-yellow-700">
                                <p>Deleting this dealer will also delete @Model.DealerBasicOrders.Count associated basic orders.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="table-responsive table-container max-h-screen overflow-y-auto">
                    <table class="w-full divide-y divide-gray-200">
                        <thead class="bg-gray-200 sticky top-0">
                            <tr>
                                <th scope="col" class="sticky top-0 px-2 py-2 text-xs font-medium text-black-800 uppercase tracking-wider">Material Name</th>
                                <th scope="col" class="sticky top-0 px-2 py-2 text-xs font-medium text-black-800 uppercase tracking-wider">Quantity</th>
                                <th scope="col" class="sticky top-0 px-2 py-2 text-xs font-medium text-black-800 uppercase tracking-wider">Basic Amount</th>
                                <th scope="col" class="sticky top-0 px-2 py-2 text-xs font-medium text-black-800 uppercase tracking-wider">Total Amount</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var order in Model.DealerBasicOrders)
                            {
                                <tr>
                                    <td class="px-2 py-2 whitespace-nowrap whitespace-nowrap">@order.MaterialName</td>
                                    <td class="px-2 py-2 whitespace-nowrap whitespace-nowrap">@order.Quantity</td>
                                    <td class="px-2 py-2 whitespace-nowrap whitespace-nowrap">@order.Rate.ToString("C")</td>
                                    <td class="px-2 py-2 whitespace-nowrap whitespace-nowrap">@(order.Quantity * order.Rate)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}