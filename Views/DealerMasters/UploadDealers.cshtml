@{
    ViewData["Title"] = "Upload Dealers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card-header-custom {
        background-color: #007bff;
        /* Blue color for dealers */
        color: white;
        padding: 0.75rem 1rem;
    }

    .form-section {
        background-color: white;
        border-radius: 0.5rem;
        padding: 1rem;
        margin-bottom: 1rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .form-section-title {
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: #495057;
        border-bottom: 1px solid #dee2e6;
        padding-bottom: 0.5rem;
    }

    .sticky-footer {
        position: sticky;
        bottom: 0;
        background-color: white;
        padding: 1rem 0;
        border-top: 1px solid #dee2e6;
        z-index: 10;
    }

    .file-upload-area {
        border: 2px dashed #ced4da;
        border-radius: 0.375rem;
        padding: 2rem;
        text-align: center;
        background-color: #f8f9fa;
        transition: border-color 0.2s;
        cursor: pointer;
    }

    .file-upload-area:hover {
        border-color: #007bff;
    }

    .file-upload-area.dragover {
        border-color: #007bff;
        background-color: #e8f4f8;
    }

    .file-upload-icon {
        font-size: 2.5rem;
        color: #6c757d;
        margin-bottom: 1rem;
    }

    .file-info {
        margin-top: 1rem;
        padding: 0.5rem;
        background-color: #e9ecef;
        border-radius: 0.25rem;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .form-section {
            padding: 0.75rem;
        }

        .btn-group-responsive {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .btn-group-responsive .btn {
            width: 100%;
        }
    }

    .spinner-border-sm {
        width: 1rem;
        height: 1rem;
        border-width: 0.2em;
    }

    .empty-state {
        text-align: center;
        padding: 2rem;
        color: #6c757d;
    }

    .empty-state i {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: #ced4da;
    }

    .input-group-text {
        background-color: #e9ecef;
        border: 1px solid #ced4da;
        border-radius: 0.375rem 0 0 0.375rem;
        font-weight: 500;
    }

    .input-group {
        display: flex;
        align-items: stretch;
    }

    .input-group .form-control {
        border-radius: 0 0.375rem 0.375rem 0;
        border-left: none;
    }
    
    .customer-list-container {
        max-height: 60vh;
        overflow-y: auto;
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
    }

    .customer-item {
        padding: 0.75rem 1rem;
        border-bottom: 1px solid #e9ecef;
        transition: background-color 0.2s;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .customer-item:last-child {
        border-bottom: none;
    }

    .customer-item:hover {
        background-color: #f8f9fa;
    }

    .customer-name {
        font-weight: 500;
        color: #212529;
    }
</style>

<div class="container-fluid px-0">
    <div class="card mb-3">
        <div class="card-header card-header-custom p-2">
            <div class="d-flex align-items-center">
                <a asp-action="Index" class="btn btn-link text-white p-0 me-2">
                    <i class="fas fa-arrow-left fa-lg"></i>
                </a>
                <h5 class="mb-0 text-white flex-grow-1 text-center">Upload Dealers</h5>
            </div>
        </div>
        <div class="card-body p-0">
            <form asp-action="UploadDealers" method="post" id="uploadDealersForm" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-section">
                    <div class="form-section-title">
                        <i class="fas fa-filter me-2"></i>Entry Details
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6 col-12">
                            <div class="form-group">
                                <label for="customerId" class="form-label fw-bold">Customer</label>
                                <select id="customerId" name="customerId" class="form-select form-control" asp-items="ViewBag.Customers"></select>
                                <div class="form-text">Select the customer for which you want to upload dealers</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <div class="form-section-title">
                        <i class="fas fa-file-csv me-2"></i>Upload CSV File
                    </div>
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="form-group">
                                <label for="csvFile" class="form-label fw-bold">Select CSV File</label>
                                <div class="file-upload-area" id="fileUploadArea">
                                    <div class="file-upload-icon">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                    </div>
                                    <p class="mb-2">Drag & drop your CSV file here or click to browse</p>
                                    <p class="text-muted small">Supported formats: CSV</p>
                                    <input type="file" id="csvFile" name="file" class="d-none" accept=".csv,text/csv" />
                                    <button type="button" class="btn btn-outline-primary" id="browseButton">Browse
                                        Files</button>
                                </div>
                                <div id="fileInfo" class="file-info d-none">
                                    <span id="fileName"></span>
                                    <button type="button" class="btn btn-sm btn-outline-danger ms-2" id="removeFile">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                                <div class="form-text">Upload a CSV file with dealer information</div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group">
                                <label class="form-label fw-bold">Download Template</label>
                                <div class="alert alert-info">
                                    <p>Download a template file to ensure correct format for dealer upload.</p>
                                    <a asp-action="DownloadTemplate" class="btn btn-success">
                                        <i class="fas fa-download me-2"></i>Download CSV Template
                                    </a>
                                    <div class="mt-2">
                                        <small class="text-muted">
                                            <strong>How to use:</strong>
                                            1. Click "Download CSV Template"
                                            2. Fill in dealer information in the CSV file (use customer names for DistributorName column)
                                            3. Save and upload the file
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <div class="form-section-title">
                        <i class="fas fa-info-circle me-2"></i>CSV Format Instructions
                    </div>
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="alert alert-info">
                                <h6>File Format:</h6>
                                <p>The uploaded file should have the following columns in order:</p>
                                <ol>
                                    <li><strong>Name</strong> - Name of the dealer</li>
                                    <li><strong>DistributorName</strong> - Name of the distributor (customer)</li>
                                    <li><strong>RouteCode</strong> - Route code</li>
                                    <li><strong>Address</strong> - Dealer address</li>
                                    <li><strong>City</strong> - City name</li>
                                    <li><strong>PhoneNo</strong> - Phone number</li>
                                    <li><strong>Email</strong> - Email address</li>
                                </ol>
                                <p><strong>Example:</strong></p>
                                <pre class="bg-light p-2">ABC Dealer,Customer Name,RT001,"123 Main St, Suite 100",New York,1234567890,abc@example.com
XYZ Dealer,Another Customer,RT002,"456 Oak Ave",Los Angeles,0987654321,xyz@example.com</pre>
                                <p class="mb-0">The first row (header) will be ignored if present.</p>
                            </div>

                            <div class="alert alert-warning">
                                <h6>How to Create File from Excel:</h6>
                                <ol>
                                    <li>Open Microsoft Excel or any spreadsheet application</li>
                                    <li>Enter your data in the required columns as specified above</li>
                                    <li>Ensure there are no headers in the data (or they will be ignored)</li>
                                    <li>Click on <strong>File</strong> > <strong>Save As</strong></li>
                                    <li>Choose file type as <strong>CSV (Comma delimited) (*.csv)</strong></li>
                                    <li>Click <strong>Save</strong></li>
                                    <li>Confirm any warnings about file format compatibility</li>
                                </ol>
                                <p class="mb-0"><strong>Note:</strong> Only CSV format is supported for dealer uploads.</p>
                            </div>

                            <div class="alert alert-success">
                                <h6>Using the Template Feature:</h6>
                                <ol>
                                    <li>Click the "Download CSV Template" button</li>
                                    <li>Open the downloaded CSV file in Excel (it will automatically be recognized as a
                                        spreadsheet)</li>
                                    <li>Enter dealer information in the respective columns</li>
                                    <li>Save the file as CSV (Comma delimited)</li>
                                    <li>Upload the updated file using the file upload area</li>
                                </ol>
                                <p class="mb-0"><strong>Tip:</strong> The template provides the correct column structure,
                                    making data entry easier and more accurate.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="sticky-footer">
                    <div class="container-fluid">
                        <div class="d-grid gap-2 btn-group-responsive">
                            <button type="submit" class="btn btn-primary" id="uploadButton" disabled>
                                <i class="fas fa-upload me-2"></i>Upload Dealers
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const fileUploadArea = document.getElementById('fileUploadArea');
            const csvFileInput = document.getElementById('csvFile');
            const browseButton = document.getElementById('browseButton');
            const fileInfo = document.getElementById('fileInfo');
            const fileName = document.getElementById('fileName');
            const removeFile = document.getElementById('removeFile');
            const uploadButton = document.getElementById('uploadButton');
            const customerDropdown = document.getElementById('customerId');

            // Browse button click event
            browseButton.addEventListener('click', function () {
                csvFileInput.click();
            });

            // File input change event
            csvFileInput.addEventListener('change', function (e) {
                if (e.target.files.length > 0) {
                    const file = e.target.files[0];
                    fileName.textContent = file.name + ' (' + formatFileSize(file.size) + ')';
                    fileInfo.classList.remove('d-none');
                    uploadButton.disabled = false;
                } else {
                    fileInfo.classList.add('d-none');
                    uploadButton.disabled = true;
                }
            });

            // Remove file button click event
            removeFile.addEventListener('click', function () {
                csvFileInput.value = '';
                fileInfo.classList.add('d-none');
                uploadButton.disabled = true;
            });

            // Drag and drop events
            fileUploadArea.addEventListener('dragover', function (e) {
                e.preventDefault();
                fileUploadArea.classList.add('dragover');
            });

            fileUploadArea.addEventListener('dragleave', function (e) {
                e.preventDefault();
                fileUploadArea.classList.remove('dragover');
            });

            fileUploadArea.addEventListener('drop', function (e) {
                e.preventDefault();
                fileUploadArea.classList.remove('dragover');

                if (e.dataTransfer.files.length > 0) {
                    csvFileInput.files = e.dataTransfer.files;
                    const file = e.dataTransfer.files[0];
                    fileName.textContent = file.name + ' (' + formatFileSize(file.size) + ')';
                    fileInfo.classList.remove('d-none');
                    uploadButton.disabled = false;
                }
            });

            // Click on upload area to trigger file selection
            fileUploadArea.addEventListener('click', function (e) {
                if (e.target !== browseButton && e.target !== removeFile) {
                    csvFileInput.click();
                }
            });

            // Enable/disable upload button based on selections
            function checkFormValidity() {
                const customerSelected = customerDropdown.value !== "";
                const fileSelected = csvFileInput.files.length > 0;
                uploadButton.disabled = !(customerSelected && fileSelected);
            }

            customerDropdown.addEventListener('change', checkFormValidity);
            csvFileInput.addEventListener('change', checkFormValidity);

            // Function to format file size
            function formatFileSize(bytes) {
                if (bytes === 0) return '0 Bytes';
                const k = 1024;
                const sizes = ['Bytes', 'KB', 'MB', 'GB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
            }

            // Form submit event
            document.getElementById('uploadDealersForm').addEventListener('submit', function () {
                const customerId = customerDropdown.value;
                const csvFile = csvFileInput.files[0];

                if (!customerId) {
                    alert('Please select a customer.');
                    return false;
                }

                if (!csvFile) {
                    alert('Please select a CSV file to upload.');
                    return false;
                }

                // Show loading state
                uploadButton.disabled = true;
                uploadButton.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Processing...';
            });
        });
    </script>
}