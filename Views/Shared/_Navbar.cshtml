@{
	string role = Context.Request.HttpContext.Session.GetString("role");
	string user = Context.Request.HttpContext.Session.GetString("UserName");
	string name = Context.Request.HttpContext.Session.GetString("name");
}

<nav class="navbar navbar-expand navbar-dark bg-dark static-top">
	@if (role == "Manager" || role == "Plant" || role == null)
	{
		<button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
			<i class="fas fa-bars"></i>
		</button>
	}
	<a class="navbar-brand mr-1" href="/Home/Index">Online Order Manager</a>

	<!-- Navbar Search -->
	<form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
		<div class="input-group">
			<span class="text-white">@name</span>
		</div>
	</form>

	<!-- Navbar -->
	<ul class="navbar-nav ml-auto ml-md-0">
		<li class="nav-item dropdown no-arrow mx-1">
			<a class="nav-link dropdown-toggle" href="#" id="messagesDropdown" role="button" data-toggle="dropdown"
			   aria-haspopup="true" aria-expanded="false">
				<span class="badge badge-danger">5</span>
				<i class="fas fa-envelope fa-fw"></i>
			</a>
			<div class="dropdown-menu dropdown-menu-right" aria-labelledby="messagesDropdown">
				<a class="dropdown-item hover:bg-blue-700 hover:text-white" href="#">New Message 1</a>
				<a class="dropdown-item hover:bg-blue-700 hover:text-white" href="#">New Message 2</a>
				<a class="dropdown-item hover:bg-blue-700 hover:text-white" href="#">New Message 3</a>
				<a class="dropdown-item hover:bg-blue-700 hover:text-white" href="#">New Message 4</a>
				<a class="dropdown-item hover:bg-blue-700 hover:text-white" href="#">New Message 5</a>
			</div>
		</li>
		<li class="nav-item dropdown no-arrow">
			<a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown"
			   aria-haspopup="true" aria-expanded="false">
				<i class="fas fa-user-circle fa-fw"></i>
			</a>
			<div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
				@if (role == "Customer")
				{
					<a class="dropdown-item hover:bg-blue-700 hover:text-white" href="">@name</a>
					<a class="dropdown-item hover:bg-blue-700 hover:text-white" href="">@user</a>
				}
				<a class="dropdown-item hover:bg-blue-700 hover:text-white" href="/Home/ChangePassword">Change Password</a>
				<div class="dropdown-divider"></div>
				<a class="dropdown-item hover:bg-blue-700 hover:text-white" href="#" data-toggle="modal"
				   data-target="#logoutModal">Logout</a>
			</div>
		</li>
	</ul>
</nav>