@model Milk_Bakery.Models.ErrorViewModel

@{
    ViewData["Title"] = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3">
    <div class="card mb-3">
        <div class="card-header text-white p-1" style="background-color:#FC2947;">
            <div class="d-flex align-items-baseline">
                <h5 class="mx-auto text-white text-2xl font-semibold">Error</h5>
            </div>
        </div>
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="alert alert-danger text-center" role="alert">
                        <h4 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Error</h4>
                        <p class="mb-0">@Model.ErrorMessage</p>
                    </div>
                    
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Details</h5>
                            <p class="card-text">@Model.ErrorDetails</p>
                            
                            @if (Model.ShowRequestId)
                            {
                                <hr />
                                <p class="mb-0">
                                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                                </p>
                            }
                            
                            <div class="text-center mt-4">
                                <a href="@Model.RedirectUrl" class="btn btn-primary">@Model.RedirectText</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>