@model Milk_Bakery.ViewModels.DeliveredQuantityEntryViewModel
@{
    ViewData["Title"] = "Delivered Quantity Entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-2">
    <div class="card mb-2">
        <div class="card-header text-white p-2" style="background-color:#FC2947;">
            <div class="d-flex align-items-center">
                <a href="/Home/Index" class="btn btn-link text-white p-0 mr-2">
                    <i class="fa fa-arrow-left"></i>
                </a>
                <h5 class="mb-0 text-white font-weight-bold">Delivered Quantity Entry</h5>
                <a href="/DeliveredQuantityReport/Index" class="btn btn-light btn-sm ml-auto">
                    <i class="fas fa-chart-bar"></i> <span class="d-none d-sm-inline">View Report</span>
                </a>
            </div>
        </div>
        <div class="card-body p-2">
            <div class="row">
                <div class="col-12">
                    <div class="card shadow-sm mb-3">
                        <div class="card-header bg-primary text-white p-2">
                            <h6 class="mb-0">Select Distributor and Dealer</h6>
                        </div>
                        <div class="card-body p-2">
                            <form id="deliveredQuantityForm">
                                <div class="form-group mb-2">
                                    <label for="distributorSelect" class="font-weight-bold small mb-1">Select Distributor/Customer:</label>
                                    <select id="distributorSelect" class="form-control form-control-sm select2"
                                        asp-items="@(new SelectList(Model.AvailableDistributors, "Id", "Name"))">
                                        <option value="">-- Select Distributor --</option>
                                    </select>
                                    <small class="form-text text-muted small">Please select a distributor first.</small>
                                </div>
                                
                                <div class="form-group mb-0">
                                    <label for="dealerSelect" class="font-weight-bold small mb-1">Select Dealer:</label>
                                    <select id="dealerSelect" class="form-control form-control-sm select2" disabled>
                                        <option value="">-- Select Dealer --</option>
                                    </select>
                                    <small class="form-text text-muted small">Please select a dealer after selecting a distributor.</small>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div id="deliveredQuantityContainer">
                <!-- Dealer orders will be loaded here via AJAX -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize Select2 with compact settings
            $('.select2').select2({
                width: '100%',
                placeholder: "-- Select --",
                allowClear: true
            });

            // Handle distributor selection
            $('#distributorSelect').on('change', function () {
                var distributorId = $(this).val();
                if (distributorId) {
                    // Enable dealer dropdown
                    $('#dealerSelect').prop('disabled', false);
                    
                    // Load dealers for the selected distributor
                    $('#dealerSelect').html('<option value="">Loading dealers...</option>');
                    
                    $.ajax({
                        url: '@Url.Action("GetDealersByDistributor", "DeliveredQuantity")',
                        type: 'GET',
                        data: { distributorId: distributorId },
                        success: function (result) {
                            var dealerSelect = $('#dealerSelect');
                            dealerSelect.html('<option value="">-- Select Dealer --</option>');
                            
                            if (result.success && result.dealers && result.dealers.length > 0) {
                                // Separate ordered and non-ordered dealers
                                var orderedDealers = [];
                                var nonOrderedDealers = [];
                                
                                $.each(result.dealers, function (index, dealer) {
                                    if (dealer.hasOrderedToday) {
                                        orderedDealers.push(dealer);
                                    } else {
                                        nonOrderedDealers.push(dealer);
                                    }
                                });
                                
                                // Add non-ordered dealers first
                                $.each(nonOrderedDealers, function (index, dealer) {
                                    dealerSelect.append('<option value="' + dealer.id + '">' + dealer.name + '</option>');
                                });
                                
                                // Add ordered dealers at the bottom
                                if (orderedDealers.length > 0) {
                                    // Add a separator
                                    dealerSelect.append('<option disabled>──────────────────</option>');
                                    $.each(orderedDealers, function (index, dealer) {
                                        dealerSelect.append('<option value="' + dealer.id + '" class="ordered-dealer" data-has-ordered="true">' + dealer.name + ' <i class="fas fa-check-circle text-success"></i></option>');
                                    });
                                }
                            } else {
                                dealerSelect.html('<option value="">No dealers found</option>');
                            }
                        },
                        error: function () {
                            $('#dealerSelect').html('<option value="">Error loading dealers</option>');
                        }
                    });
                } else {
                    // Reset dealer dropdown if no distributor is selected
                    $('#dealerSelect').prop('disabled', true).html('<option value="">-- Select Dealer --</option>');
                    $('#deliveredQuantityContainer').html('');
                }
            });
            
            // Handle dealer selection
            $('#dealerSelect').on('change', function () {
                var dealerId = $(this).val();
                var dealerOption = $('#dealerSelect option:selected');
                var hasOrderedToday = dealerOption.data('has-ordered');
                var distributorId = $('#distributorSelect').val();
                
                if (dealerId && distributorId) {
                    // Show loading indicator
                    $('#deliveredQuantityContainer').html('<div class="text-center py-2"><div class="spinner-border spinner-border-sm" role="status"><span class="sr-only">Loading...</span></div><p class="small mt-1 mb-0">Loading details...</p></div>');
                    
                    $.ajax({
                        url: '@Url.Action("LoadDealerOrders", "DeliveredQuantity")',
                        type: 'POST',
                        data: { 
                            distributorId: distributorId,
                            dealerId: dealerId 
                        },
                        success: function (result) {
                            if (result.success === false) {
                                // Handle error from server
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: result.message,
                                    confirmButtonText: 'OK'
                                });
                                $('#dealerSelect').val('');
                                $('#deliveredQuantityContainer').html('');
                            } else {
                                $('#deliveredQuantityContainer').html(result);
                            }
                        },
                        error: function () {
                            $('#deliveredQuantityContainer').html('<div class="alert alert-danger small py-2 mb-0" role="alert"><i class="fa fa-exclamation-triangle"></i> Error loading details. Try again.</div>');
                        }
                    });
                } else {
                    $('#deliveredQuantityContainer').html('');
                }
            });
        });
    </script>
    
    <style>
        .ordered-dealer {
            color: #6c757d !important;
            font-style: italic;
        }
        .select2-container--default .select2-results__option[aria-disabled=true] {
            font-weight: bold;
            color: #6c757d;
        }
        
        /* Compact styling for mobile */
        @@media (max-width: 575.98px) {
            .card-body {
                padding: 0.5rem !important;
            }
            
            .form-group {
                margin-bottom: 0.75rem;
            }
            
            .mb-3 {
                margin-bottom: 0.5rem !important;
            }
            
            .p-2 {
                padding: 0.5rem !important;
            }
            
            .btn {
                padding: 0.25rem 0.5rem;
                font-size: 0.8rem;
            }
            
            .small, small {
                font-size: 0.75rem !important;
            }
        }
    </style>
}