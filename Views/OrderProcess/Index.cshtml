@model IEnumerable<Milk_Bakery.Models.PurchaseOrder>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3">
    <div class="card mb-3">
        <div class="card-header text-white p-1" style="background-color:#FC2947;">
            <div class="d-flex align-items-baseline">
                <a href="/Home/Index" class="btn btn-link text-white"><i class="fa fa-arrow-left"></i></a>
                <h5 class="mx-auto text-white text-2xl font-semibold">Order Verify</h5>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-sm" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customername)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Segementname)
            </th>
           @* <th>
                @Html.DisplayNameFor(model => model.Segementcode)
            </th>*@
           @* <th>
                @Html.DisplayNameFor(model => model.verifyflag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.processflag)
            </th>*@
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
                            if (item.verifyflag == 0 && item.processflag==0)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Customername)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CustomerCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Segementname)
                                    </td>
                                  @*  <td>
                                        @Html.DisplayFor(modelItem => item.Segementcode)
                                    </td>*@
                                    @*  <td>
                            @Html.DisplayFor(modelItem => item.verifyflag)
                            </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.processflag)
                            </td>*@
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary text-white" data-toggle="tooltip" data-placement="top" title="Verify">
                                            <i class="fa fa-edit" aria-hidden="true">Verify</i>
                                        </a>
                                        @*  <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                                    </td>
                                </tr>
                            }
                          
}
    </tbody>
</table>
</div>
</div>
    </div>
</div>

      
        
