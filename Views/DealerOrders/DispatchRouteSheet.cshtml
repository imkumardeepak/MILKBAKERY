@{
    ViewData["Title"] = "Dispatch Route Sheet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3">
    <div class="card mb-3">
        <div class="card-header text-white p-1" style="background-color:#FC2947;">
            <div class="d-flex align-items-baseline">
                <a href="/DealerOrders/Index" class="btn btn-link text-white"><i class="fa fa-arrow-left"></i></a>
                <h5 class="mx-auto text-white text-2xl font-semibold">Dispatch Route Sheet</h5>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="dispatchDate" class="form-label font-weight-bold">Dispatch Date:</label>
                    <input type="date" id="dispatchDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-4">
                    <label for="customerFilter" class="form-label font-weight-bold">Customer/Distributor:</label>
                    <select id="customerFilter" class="form-control select2">
                        <option value="">-- All Customers --</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button id="filterBtn" class="btn btn-primary mr-2">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                    <button id="exportBtn" class="btn btn-success">
                        <i class="fas fa-file-excel"></i> Export to Excel
                    </button>
                </div>
            </div>
            
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table id="dispatchTable" class="table table-striped table-bordered" style="width:100%">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Route Code</th>
                                    <th>Dealer Name</th>
                                    <th>Phone No</th>
                                    <th>Address</th>
                                    <th>Material</th>
                                    <th>Quantity</th>
                                    <th>Unit</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Data will be loaded here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize Select2
            $('.select2').select2();
            
            // Load customers/distributors
            loadCustomers();
            
            // Load initial data
            loadData();
            
            // Filter button click event
            $('#filterBtn').on('click', function () {
                loadData();
            });
            
            // Export button click event
            $('#exportBtn').on('click', function () {
                exportToExcel();
            });
            
            // Date change event
            $('#dispatchDate').on('change', function () {
                loadData();
            });
            
            // Customer filter change event
            $('#customerFilter').on('change', function () {
                loadData();
            });
            
            function loadCustomers() {
                $.ajax({
                    url: '@Url.Action("GetAllCustomers", "DealerOrders")',
                    type: 'GET',
                    success: function (result) {
                        if (result.success) {
                            var select = $('#customerFilter');
                            select.empty().append('<option value="">-- All Customers --</option>');
                            
                            $.each(result.customers, function (index, customer) {
                                select.append('<option value="' + customer.id + '">' + customer.name + '</option>');
                            });
                        }
                    },
                    error: function () {
                        console.log('Error loading customers');
                    }
                });
            }
            
            function loadData() {
                var date = $('#dispatchDate').val();
                var customerId = $('#customerFilter').val();
                
                $.ajax({
                    url: '@Url.Action("GetDispatchData", "DealerOrders")',
                    type: 'GET',
                    data: {
                        date: date,
                        customerId: customerId
                    },
                    success: function (result) {
                        if (result.success) {
                            var tbody = $('#dispatchTable tbody');
                            tbody.empty();
                            
                            if (result.data && result.data.length > 0) {
                                $.each(result.data, function (index, item) {
                                    var row = '<tr>' +
                                        '<td>' + (item.routeCode || '') + '</td>' +
                                        '<td>' + (item.dealerName || '') + '</td>' +
                                        '<td>' + (item.phoneNo || '') + '</td>' +
                                        '<td>' + (item.address || '') + '</td>' +
                                        '<td>' + (item.materialName || '') + '</td>' +
                                        '<td>' + (item.quantity || 0) + '</td>' +
                                        '<td>' + (item.unit || '') + '</td>' +
                                        '</tr>';
                                    tbody.append(row);
                                });
                            } else {
                                tbody.append('<tr><td colspan="7" class="text-center">No data found</td></tr>');
                            }
                        } else {
                            $('#dispatchTable tbody').empty().append('<tr><td colspan="7" class="text-center">Error loading data: ' + result.message + '</td></tr>');
                        }
                    },
                    error: function () {
                        $('#dispatchTable tbody').empty().append('<tr><td colspan="7" class="text-center">Error loading data</td></tr>');
                    }
                });
            }
            
            function exportToExcel() {
                var date = $('#dispatchDate').val();
                var customerId = $('#customerFilter').val();
                var url = '@Url.Action("ExportDispatchToExcel", "DealerOrders")' + 
                          '?date=' + encodeURIComponent(date) + 
                          '&customerId=' + encodeURIComponent(customerId || '');
                window.location.href = url;
            }
        });
    </script>
}