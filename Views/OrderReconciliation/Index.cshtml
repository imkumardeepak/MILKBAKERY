@{
    ViewData["Title"] = "Order Reconciliation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-2">
    <div class="card mb-2">
        <div class="card-header text-white p-2" style="background-color:#17a2b8;">
            <div class="d-flex align-items-center">
                <a href="@Url.Action("Index", "Home")" class="btn btn-link text-white p-0 mr-2">
                    <i class="fa fa-arrow-left"></i>
                </a>
                <h5 class="mb-0 text-white font-weight-bold">Order Reconciliation</h5>
            </div>
        </div>
        <div class="card-body p-2">
            <div class="row mb-2">
                <div class="col-12 col-md-4 mb-2 mb-md-0">
                    <label for="orderDate" class="form-label font-weight-bold mb-1">Order Date:</label>
                    <input type="date" id="orderDate" class="form-control form-control-sm" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-12 col-md-4 mb-2 mb-md-0">
                    <label for="customerFilter" class="form-label font-weight-bold mb-1">Customer/Distributor:</label>
                    <select id="customerFilter" class="form-control form-control-sm select2">
                        <option value="">-- Select Customer --</option>
                    </select>
                </div>
                <div class="col-12 col-md-4">
                    <div class="d-flex flex-column h-100 justify-content-end">
                        <div class="d-flex justify-content-between justify-content-md-end align-items-center">
                            <button id="filterBtn" class="btn btn-primary btn-sm mr-1">
                                <i class="fas fa-filter"></i> <span class="d-none d-sm-inline">Filter</span>
                            </button>
                            <button id="exportBtn" class="btn btn-success btn-sm" disabled>
                                <i class="fas fa-file-excel"></i> <span class="d-none d-sm-inline">Export</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Summary Cards -->
            <div class="row mb-2">
                <div class="col-12">
                    <div class="card border-info">
                        <div class="card-header bg-info text-white p-2">
                            <h6 class="mb-0">Order Summary</h6>
                        </div>
                        <div class="card-body p-2">
                            <div class="d-flex justify-content-around flex-wrap">
                                <div class="p-1 text-center">
                                    <h5 class="mb-0 font-weight-bold text-primary"><span id="grandTotal">0</span></h5>
                                    <p class="mb-0 small">Total Quantity</p>
                                </div>
                                <div class="p-1 text-center">
                                    <h5 class="mb-0 font-weight-bold text-success"><span id="totalCrates">0</span></h5>
                                    <p class="mb-0 small">Total Crates</p>
                                </div>
                                <div class="p-1 text-center">
                                    <h5 class="mb-0 font-weight-bold text-warning"><span id="totalLeftoverItems">0</span></h5>
                                    <p class="mb-0 small">Leftover Items</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table id="reconciliationTable" class="table table-striped table-bordered table-sm" style="width:100%">
                            <thead class="thead-dark">
                                <tr>
                                    <!-- Material name column hidden on small screens, visible on medium and up -->
                                    <th class="d-none d-md-table-cell">Material</th>
                                    <th>Code</th>
                                    <th>Order Qty</th>
                                    <th>Unit</th>
                                    <th>Items per Box</th>
                                    <th>Total Crates</th>
                                    <th>In Crates</th>
                                    <th>Leftover</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr><td colspan="8" class="text-center">Select date & customer, click Filter</td></tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <!-- Material name column hidden on small screens, visible on medium and up -->
                                    <th class="d-none d-md-table-cell" colspan="2" class="text-right">Total:</th>
                                    <th class="d-md-none">Total:</th>
                                    <th id="footerGrandTotal">0</th>
                                    <th></th>
                                    <th id="footerTotalItemsPerCrate">0</th>
                                    <th id="footerTotalCrates">0</th>
                                    <th id="footerTotalItemsInCrates">0</th>
                                    <th id="footerTotalLeftoverItems">0</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize Select2
            $('.select2').select2({
                width: '100%',
                placeholder: "-- Select Customer --",
                allowClear: true
            });
            
            // Load customers/distributors
            loadCustomers();
            
            // Filter button click event
            $('#filterBtn').on('click', function () {
                loadData();
            });
            
            // Export button click event
            $('#exportBtn').on('click', function () {
                exportToExcel();
            });
            
            function loadCustomers() {
                $.ajax({
                    url: '@Url.Action("GetAllCustomers", "OrderReconciliation")',
                    type: 'GET',
                    success: function (result) {
                        if (result.success) {
                            var select = $('#customerFilter');
                            select.empty().append('<option value="">-- Select Customer --</option>');
                            
                            $.each(result.customers, function (index, customer) {
                                select.append('<option value="' + customer.id + '">' + customer.name + '</option>');
                            });
                        }
                    },
                    error: function () {
                        console.log('Error loading customers');
                    }
                });
            }
            
            function loadData() {
                var date = $('#orderDate').val();
                var customerId = $('#customerFilter').val();
                
                // Validate that both date and customer are selected
                if (!date || !customerId) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Missing Filters',
                        text: 'Please select both a date and a customer to load data.',
                        confirmButtonText: 'OK'
                    });
                    return;
                }
                
                $.ajax({
                    url: '@Url.Action("GetReconciliationData", "OrderReconciliation")',
                    type: 'GET',
                    data: {
                        date: date,
                        customerId: customerId
                    },
                    success: function (result) {
                        if (result.success) {
                            var tbody = $('#reconciliationTable tbody');
                            tbody.empty();
                            
                            if (result.data && result.data.length > 0) {
                                $.each(result.data, function (index, item) {
                                    // Material name cell hidden on small screens, visible on medium and up
                                    var materialCell = '<td class="d-none d-md-table-cell">' + (item.materialName || '') + '</td>';
                                    
                                    var row = '<tr>' +
                                        materialCell +
                                        '<td>' + (item.shortCode || '') + '</td>' +
                                        '<td>' + (item.quantity || 0) + '</td>' +
                                        '<td>' + (item.unitType || 'PCS') + '</td>' +
                                        '<td>' + (item.totalQuantityPerUnit || 1) + '</td>' +
                                        '<td>' + (item.crates || 0) + '</td>' +
                                        '<td>' + (item.itemsInCrates || 0) + '</td>' +
                                        '<td class="' + (item.leftoverItems > 0 ? 'text-warning font-weight-bold' : (item.leftoverItems === 0 ? 'text-success' : '')) + '">' + 
                                        (item.leftoverItems || 0) + 
                                        '</td>' +
                                        '</tr>';
                                    tbody.append(row);
                                });
                                
                                // Enable export button
                                $('#exportBtn').prop('disabled', false);
                                
                                // Update grand totals
                                $('#grandTotal').text(result.grandTotal);
                                $('#totalCrates').text(result.totalCrates);
                                $('#totalLeftoverItems').text(result.totalLeftoverItems);
                                
                                // Update footer totals
                                $('#footerGrandTotal').text(result.grandTotal);
                                $('#footerTotalItemsPerCrate').text(result.totalItemsPerCrate);
                                $('#footerTotalCrates').text(result.totalCrates);
                                $('#footerTotalItemsInCrates').text(result.totalItemsInCrates);
                                $('#footerTotalLeftoverItems').text(result.totalLeftoverItems);
                            } else {
                                // Adjust colspan based on screen size
                                var colspan = $(window).width() < 768 ? 8 : 8;
                                tbody.append('<tr><td colspan="' + colspan + '" class="text-center">No data found</td></tr>');
                                
                                // Reset totals
                                $('#grandTotal').text('0');
                                $('#totalCrates').text('0');
                                $('#totalLeftoverItems').text('0');
                                
                                $('#footerGrandTotal').text('0');
                                $('#footerTotalItemsPerCrate').text('0');
                                $('#footerTotalCrates').text('0');
                                $('#footerTotalItemsInCrates').text('0');
                                $('#footerTotalLeftoverItems').text('0');
                                
                                // Disable export button when no data
                                $('#exportBtn').prop('disabled', true);
                            }
                        } else {
                            // Adjust colspan based on screen size
                            var colspan = $(window).width() < 768 ? 8 : 8;
                            $('#reconciliationTable tbody').empty().append('<tr><td colspan="' + colspan + '" class="text-center">Error: ' + result.message + '</td></tr>');
                            
                            // Reset totals
                            $('#grandTotal').text('0');
                            $('#totalCrates').text('0');
                            $('#totalLeftoverItems').text('0');
                            
                            $('#footerGrandTotal').text('0');
                            $('#footerTotalItemsPerCrate').text('0');
                            $('#footerTotalCrates').text('0');
                            $('#footerTotalItemsInCrates').text('0');
                            $('#footerTotalLeftoverItems').text('0');
                            
                            // Disable export button on error
                            $('#exportBtn').prop('disabled', true);
                        }
                    },
                    error: function () {
                        // Adjust colspan based on screen size
                        var colspan = $(window).width() < 768 ? 8 : 8;
                        $('#reconciliationTable tbody').empty().append('<tr><td colspan="' + colspan + '" class="text-center">Error loading data</td></tr>');
                        
                        // Reset totals
                        $('#grandTotal').text('0');
                        $('#totalCrates').text('0');
                        $('#totalLeftoverItems').text('0');
                        
                        $('#footerGrandTotal').text('0');
                        $('#footerTotalItemsPerCrate').text('0');
                        $('#footerTotalCrates').text('0');
                        $('#footerTotalItemsInCrates').text('0');
                        $('#footerTotalLeftoverItems').text('0');
                        
                        // Disable export button on error
                        $('#exportBtn').prop('disabled', true);
                    }
                });
            }
            
            function exportToExcel() {
                var date = $('#orderDate').val();
                var customerId = $('#customerFilter').val();
                var url = '@Url.Action("ExportToExcel", "OrderReconciliation")' + 
                          '?date=' + encodeURIComponent(date) + 
                          '&customerId=' + encodeURIComponent(customerId || '');
                window.location.href = url;
            }
        });
    </script>
    
    <style>
        /* Responsive adjustments for small screens */
        @@media (max-width: 575.98px) {
            .card-body {
                padding: 0.5rem !important;
            }
            
            .form-group {
                margin-bottom: 0.75rem;
            }
            
            .mb-2 {
                margin-bottom: 0.5rem !important;
            }
            
            .p-2 {
                padding: 0.5rem !important;
            }
            
            .table th, .table td {
                padding: 0.25rem !important;
                font-size: 0.8rem;
            }
            
            .btn {
                padding: 0.25rem 0.5rem;
                font-size: 0.8rem;
            }
            
            .card-header h6 {
                font-size: 0.9rem;
            }
        }
        
        /* Additional compact styles */
        .card-body .row {
            margin-bottom: 0.5rem;
        }
        
        .form-label {
            font-size: 0.85rem;
            margin-bottom: 0.25rem;
        }
        
        .select2-container .select2-selection--single {
            height: calc(1.5em + 0.5rem + 2px);
        }
        
        .select2-container .select2-selection--single .select2-selection__rendered {
            line-height: 1.25;
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }
        
        .select2-container .select2-selection--single .select2-selection__arrow {
            height: calc(1.5em + 0.5rem + 2px);
        }
    </style>
}