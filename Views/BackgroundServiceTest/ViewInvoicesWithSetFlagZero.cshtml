@model List<Milk_Bakery.Models.InvoiceDetails.Invoice>
@{
    ViewData["Title"] = "Invoices with setflag=0";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Invoices with setflag=0</h2>
            <p>These are the invoices that the background service will process.</p>
            
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5>@ViewBag.InvoiceCount Invoices Found</h5>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Back to Test</a>
            </div>

            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Invoice ID</th>
                                <th>Invoice No</th>
                                <th>Invoice Date</th>
                                <th>Customer PO</th>
                                <th>Total Amount</th>
                                <th>Bill To</th>
                                <th>Ship To</th>
                                <th>Vehicle No</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var invoice in Model)
                            {
                                <tr>
                                    <td>@invoice.InvoiceId</td>
                                    <td>@invoice.InvoiceNo</td>
                                    <td>@invoice.InvoiceDate.ToString("yyyy-MM-dd")</td>
                                    <td>@invoice.CustomerRefPO</td>
                                    <td>@invoice.TotalAmount.ToString("C")</td>
                                    <td>@invoice.BillToName (@invoice.BillToCode)</td>
                                    <td>@invoice.ShipToName (@invoice.ShipToCode)</td>
                                    <td>@invoice.VehicleNo</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h5>No invoices found with setflag=0</h5>
                    <p>The background service will not find any invoices to process at this time.</p>
                </div>
            }
        </div>
    </div>
</div>