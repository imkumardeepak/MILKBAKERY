@model IEnumerable<Milk_Bakery.Models.CustTransaction>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string role = Context.Request.HttpContext.Session.GetString("role");
}


    <div class="mt-3">
        <div class="card mb-3">
        <div class="card-header text-white p-1" style="background-color:#FC2947;">
            <div class="d-flex align-items-baseline">
                <a href="/Home/Index" class="btn btn-link text-white"><i class="fa fa-arrow-left"></i></a>
                <h5 class="mx-auto text-white text-2xl font-semibold">Bill Summary</h5>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="form-group col-6">
                        <label for="dateInput">From Date:</label>
                    <input type="date" id="Fromdate" class="form-control" name="dateInput" onchange="dropdownChanged()">
                    </div>
                    <div class="form-group col-6">

                        <label for="dateInput">To Date:</label>
                    <input type="date" id="todate" class="form-control" name="dateInput" onchange="dropdownChanged()">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                    <select id="myDropdown1" class="form-control" asp-items="@ViewBag.customer" onchange="dropdownChanged()"></select>
                    </div>
                    <div class="form-group col-sm-6">
                        <select id="wbridge"  asp-items="@ViewBag.company" class="form-control" onchange="dropdownChanged()"></select>

                    </div>
                </div>

                <div id="output">
                </div>
            </div>
        </div>
    </div>

<script>
    function dropdownChanged() {
        var selectedOption = document.getElementById("wbridge").value;
        var someOtherValue = document.getElementById("myDropdown1").value;
        var fromdate = document.getElementById("Fromdate").value;
        var todate = document.getElementById("todate").value;
        // Make an AJAX request to the controller action
        $.ajax({
            url: '/Outstanding/ActionName',
            type: 'POST',
            data: { company: selectedOption, customer: someOtherValue,FromDate:fromdate,ToDate:todate },
            success: function (result) {
                $('#output').empty();
                $("#output").html(result);
                //$('#dataTable').DataTable({
                //    pageLength: 5,
                //    lengthMenu: [[5, 10, 20, -1], [5, 10, 20, 'Todos']],
                //    dom: 'Bfrtip',
                //    buttons: [
                //         'excel', 'pdf', 'print'
                //    ]
                //});
            },
            error: function (xhr, status, error) {
                // Handle the error response
                console.log("An error occurred while executing the action.");
            }
        });
    }
</script>

