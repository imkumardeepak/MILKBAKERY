@model IEnumerable<Milk_Bakery.Models.CustomerSegementMap>

@{
    ViewData["Title"] = "Customer Segment Mapping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3">
    <div class="card mb-3">
        <div class="card-header text-white p-1" style="background-color:#FC2947;">
            <div class="d-flex align-items-baseline">
                <a href="/Home/Index" class="btn btn-link text-white"><i class="fa fa-arrow-left"></i></a>
                <h5 class="mx-auto text-white text-2xl font-semibold">Customer Segment Mapping</h5>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-sm-6">
                    <label for="customerDropdown">Customer:</label>
                    <select id="customerDropdown" class="form-control" asp-items="@ViewBag.customer"></select>
                </div>
                <div class="form-group col-sm-6">
                    <label for="segmentDropdown">Segment:</label>
                    <select id="segmentDropdown" class="form-control" asp-items="@ViewBag.segment"></select>
                </div>
            </div>

            <div id="mappingTable">
                @await Html.PartialAsync("_MappingTable", Model)
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Initialize DataTable
        if (!$.fn.DataTable.isDataTable("#dataTable")) {
            $("#dataTable").DataTable({
                "order": [[0, "asc"]],
                "pageLength": 25
            });
        }

        // Handle dropdown changes
        $('#customerDropdown, #segmentDropdown').change(function () {
            var customer = $('#customerDropdown').val();
            var segment = $('#segmentDropdown').val();

            $.ajax({
                url: '@Url.Action("GetMappings", "CustomerSegmentMapping")',
                type: 'POST',
                data: {
                    customer: customer,
                    segment: segment
                },
                success: function (result) {
                    $('#mappingTable').html(result);
                    // Reinitialize DataTable after updating the table
                    if ($.fn.DataTable.isDataTable("#dataTable")) {
                        $("#dataTable").DataTable().destroy();
                    }
                    $("#dataTable").DataTable({
                        "order": [[0, "asc"]],
                        "pageLength": 25
                    });
                },
                error: function (xhr, status, error) {
                    console.log("An error occurred while fetching mappings.");
                }
            });
        });
    });
</script>