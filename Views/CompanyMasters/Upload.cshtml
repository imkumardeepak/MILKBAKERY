@model Milk_Bakery.Models.Customer_Master

@{
	ViewData["Title"] = "Upload";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-screen-md mx-auto mt-8">
	<form asp-action="Upload" method="post" enctype="multipart/form-data" class="bg-white shadow-lg rounded-lg px-4 py-6">
		<div class="mb-4">
			<label for="csvFile" class="block text-gray-700 font-semibold mb-2">Upload CSV File:</label>
			<input type="file" name="csvFile" id="csvFile" accept=".csv" class="border rounded-lg p-2 w-full">
		</div>

		<div class="px-4 text-right py-2">
			<input type="submit" value="Save" class="h-10 w-32 rounded-sm shadow-md text-white text-[16px] hover:bg-green-700 bg-green-600 btn" />
			<a asp-action="Index" class="h-10 w-32 rounded-sm shadow-md text-white text-[16px] hover:bg-red-700 bg-red-600 btn">Back</a>
		</div>
	</form>


</div>