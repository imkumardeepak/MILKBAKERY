@model IEnumerable<Milk_Bakery.Models.MaterialMaster>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="w-full bg-white shadow-lg rounded-lg overflow-hidden mt-2">
    <div class="bg-blue-500 px-2 py-2 flex items-center justify-between">
        <h2 class="text-white text-2xl font-semibold">Material Master</h2>
     <a asp-action="AddOrEdit" class="h-10 w-32 rounded-sm shadow-md text-white text-[16px] hover:bg-blue-700 bg-blue-600 btn"><i class="fa fa-plus">Add</i></a>
    </div>
    <div class="p-2">
        <div class="w-screen-lg mt-2">
            <div class="table-responsive table-container max-h-screen overflow-y-auto">
                <table class="w-full divide-y divide-gray-200" id="dataTable">
                    <thead class="bg-gray-200 sticky top-0">
                        <tr>
                            <th scope="col" class="sticky top-0 px-2 py-2  text-xs font-medium text-black-800 uppercase tracking-wider">@Html.DisplayNameFor(model => model.Materialname)</th>
                            <th scope="col" class="sticky top-0 px-2 py-2  text-xs font-medium text-black-800 uppercase tracking-wider">
                                @Html.DisplayNameFor(model => model.ShortName)
                            </th>
                            <th scope="col" class="sticky top-0 px-2 py-2  text-xs font-medium text-black-800 uppercase tracking-wider">@Html.DisplayNameFor(model => model.segementname)</th>
                            <th scope="col" class="sticky top-0 px-2 py-2  text-xs font-medium text-black-800 uppercase tracking-wider">@Html.DisplayNameFor(model => model.Unit)</th>
                            <th scope="col" class="sticky top-0 px-2 py-2  text-xs font-medium text-black-800 uppercase tracking-wider">@Html.DisplayNameFor(model => model.Category)</th>
                            <th scope="col" class="sticky top-0 px-2 py-2  text-xs font-medium text-black-800 uppercase tracking-wider">@Html.DisplayNameFor(model => model.price)</th>
                            <th scope="col" class="sticky top-0 px-2 py-2  text-xs font-medium text-black-800 uppercase tracking-wider">@Html.DisplayNameFor(model => model.isactive)</th>
                            <th scope="col" class="sticky top-0 px-2 py-2  text-xs font-medium text-black-800 uppercase tracking-wider">Action</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="px-2 py-2  whitespace-nowrap whitespace-nowrap">
                                    @Html.DisplayFor(modelItem => item.Materialname)
                                </td>
                                <td class="px-2 py-2  whitespace-nowrap whitespace-nowrap">
                                    @Html.DisplayFor(modelItem => item.ShortName)
                                </td>
                                <td class="px-2 py-2  whitespace-nowrap whitespace-nowrap">
                                    @Html.DisplayFor(modelItem => item.segementname)
                                </td>
                                <td class="px-2 py-2  whitespace-nowrap whitespace-nowrap">
                                    @Html.DisplayFor(modelItem => item.Unit)
                                </td>
                                <td class="px-2 py-2  whitespace-nowrap whitespace-nowrap">
                                    @Html.DisplayFor(modelItem => item.Category)
                                </td>
                                <td class="px-2 py-2  whitespace-nowrap whitespace-nowrap">
                                    @Html.DisplayFor(modelItem => item.price)
                                </td>
                                <td class="px-2 py-2  whitespace-nowrap whitespace-nowrap">
                                    @Html.DisplayFor(modelItem => item.isactive)
                                </td>
                              
                                <td class="px-3 py-2 whitespace-nowrap whitespace-nowrap">
                                    <a asp-action="AddOrEdit" asp-route-id="@item.Id" class="h-10 w-10 rounded-sm shadow-md text-white text-[16px] hover:bg-yellow-700 bg-yellow-600 btn"><i class="fas fa-pencil-alt"></i> </a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="h-10 w-10 rounded-sm shadow-md text-white text-[16px] hover:bg-red-700 bg-red-600 btn" onclick="return confirmation(this);"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                        <!-- Add more rows as needed -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
