@using System.Data;
@model DataTable
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="mt-3">
    <div class="card mb-3">
          <div class="card-header bg-blue-500 text-white">
            <div class="d-flex align-items-baseline">
                <h5 class="mx-auto text-white text-2xl font-semibold">Upload Customer File</h5>
                
            </div>
        </div>
        <div class="card-body">


            <form method="post" enctype="multipart/form-data" asp-action="Index">
                <div class="row">
                    <div class="col-sm-3">
            <div class="form-group">
                <label for="file">Select file:</label>
                <input type="file" name="file" id="file" class="form-control-file" accept=".txt">
            </div>
                    </div>
                    <div class="px-4 text-left py-2">
                        <button type="submit" class="h-10 w-32 rounded-sm shadow-md text-white text-[16px] hover:bg-green-700 bg-green-600 btn">View</button>
                        <a asp-action="InsertProducts" class="h-10 w-32 rounded-sm shadow-md text-white text-[16px] hover:bg-red-700 bg-red-600 btn">Upload</a>
                    </div>
            </div>
               
        </form>

            @if (Model != null)
            {
                <hr />
                <div class="w-screen-lg  mt-2">
                    <div class="table-responsive table-container max-h-80  overflow-y-auto">
                        <table class="w-full divide-y divide-gray-200">
                            <thead class="bg-gray-200 sticky top-0">
                                <tr>
                        @foreach (DataColumn dc in Model.Columns)
                        {
                            <th>@dc.ColumnName</th>
                        }
                    </tr>
                    @foreach (DataRow dr in Model.Rows)
                    {
                        <tr>
                            @foreach (DataColumn dc in Model.Columns)
                            {
                                <td>@dr[dc.ColumnName]</td>
                            }
                        </tr>
                    }
                </table>
                </div>
                </div>
            }

</div>
</div>
</div>

