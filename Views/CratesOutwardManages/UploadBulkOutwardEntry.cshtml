@model Milk_Bakery.ViewModels.BulkOutwardEntryViewModel

@{
    ViewData["Title"] = "Upload Bulk Outward Entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card-header-custom {
        background-color: #dc3545;
        /* Red color for outward */
        color: white;
        padding: 0.75rem 1rem;
    }

    .form-section {
        background-color: white;
        border-radius: 0.5rem;
        padding: 1rem;
        margin-bottom: 1rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .form-section-title {
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: #495057;
        border-bottom: 1px solid #dee2e6;
        padding-bottom: 0.5rem;
    }

    .customer-list-container {
        max-height: 60vh;
        overflow-y: auto;
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
    }

    .customer-item {
        padding: 0.75rem 1rem;
        border-bottom: 1px solid #e9ecef;
        transition: background-color 0.2s;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .customer-item:last-child {
        border-bottom: none;
    }

    .customer-item:hover {
        background-color: #f8f9fa;
    }

    .customer-name {
        font-weight: 500;
        color: #212529;
    }

    .opening-input {
        max-width: 120px;
        text-align: right;
    }

    .sticky-footer {
        position: sticky;
        bottom: 0;
        background-color: white;
        padding: 1rem 0;
        border-top: 1px solid #dee2e6;
        z-index: 10;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .form-section {
            padding: 0.75rem;
        }

        .customer-item {
            padding: 0.75rem 0.5rem;
            flex-direction: column;
            align-items: flex-start;
        }

        .customer-item .opening-input-group {
            width: 100%;
            margin-top: 0.5rem;
        }

        .opening-input {
            max-width: 100%;
            margin-top: 0.25rem;
        }

        .btn-group-responsive {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .btn-group-responsive .btn {
            width: 100%;
        }
    }

    .spinner-border-sm {
        width: 1rem;
        height: 1rem;
        border-width: 0.2em;
    }

    .empty-state {
        text-align: center;
        padding: 2rem;
        color: #6c757d;
    }

    .empty-state i {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: #ced4da;
    }

    .input-group-text {
        background-color: #e9ecef;
        border: 1px solid #ced4da;
        border-radius: 0.375rem 0 0 0.375rem;
        font-weight: 500;
    }

    .input-group {
        display: flex;
        align-items: stretch;
    }

    .input-group .form-control {
        border-radius: 0 0.375rem 0.375rem 0;
        border-left: none;
    }

    /* Search input styles */
    #customerSearch {
        border-radius: 0.375rem 0 0 0.375rem;
        border: 1px solid #ced4da;
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }

    #clearSearch {
        border-radius: 0 0.375rem 0.375rem 0;
        border: 1px solid #ced4da;
        border-left: none;
        padding: 0.25rem 0.5rem;
        background-color: #e9ecef;
    }

    #clearSearch:hover {
        background-color: #dee2e6;
    }

    /* Adjust the header layout for better spacing */
    .header-controls {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .search-container {
        min-width: 250px;
    }
</style>

<div class="container-fluid px-0">
    <div class="card mb-3">
        <div class="card-header card-header-custom p-2">
            <div class="d-flex align-items-center">
                <a asp-action="Index" asp-controller="CratesManages" class="btn btn-link text-white p-0 me-2">
                    <i class="fas fa-arrow-left fa-lg"></i>
                </a>
                <h5 class="mb-0 text-white flex-grow-1 text-center">Upload Bulk Outward Entry</h5>
            </div>
        </div>
        <div class="card-body p-0">
            <form asp-action="UploadBulkOutwardEntry" method="post" enctype="multipart/form-data" id="outwardEntryForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-section">
                    <div class="form-section-title">
                        <i class="fas fa-filter me-2"></i>Entry Details
                    </div>
                    <div class="row g-3">
                        <div class="col-md-4 col-12">
                            <div class="form-group">
                                <label asp-for="DispDate" class="form-label fw-bold">Dispatch Date</label>
                                <input asp-for="DispDate" class="form-control" type="date" />
                                <span asp-validation-for="DispDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 col-12">
                            <div class="form-group">
                                <label asp-for="SegmentCode" class="form-label fw-bold">Segment</label>
                                <select asp-for="SegmentCode" class="form-select form-control"
                                    asp-items="ViewBag.DivisionId" id="segmentDropdown">
                                    <option value="">-- Select Division --</option>
                                </select>
                                <span asp-validation-for="SegmentCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 col-12">
                            <div class="form-group">
                                <label asp-for="CratesTypeId" class="form-label fw-bold">Crates Type</label>
                                <select asp-for="CratesTypeId" class="form-select form-control"
                                    asp-items="ViewBag.CratesTypeId" id="cratesTypeDropdown">
                                    <option value="">-- Select Crates Type --</option>
                                </select>
                                <span asp-validation-for="CratesTypeId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <div class="form-group">
                        <label for="csvFile" class="control-label">Upload CSV/Excel File</label>
                        <input type="file" name="csvFile" id="csvFile" class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                </div>

                <div class="sticky-footer">
                    <div class="container-fluid">
                        <div class="d-grid gap-2 btn-group-responsive">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-upload me-2"></i>Upload Outward Entries
                            </button>
                            <a asp-action="Index" asp-controller="CratesManages" class="btn btn-secondary">Back to
                                List</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            const segmentDropdown = $('#segmentDropdown');
            const cratesTypeDropdown = $('#cratesTypeDropdown');

            // Set current date for DispDate
            const today = new Date();
            const yyyy = today.getFullYear();
            const mm = String(today.getMonth() + 1).padStart(2, '0'); // Months start at 0!
            const dd = String(today.getDate()).padStart(2, '0');
            $('#DispDate').val(`${yyyy}-${mm}-${dd}`);

            // Load crate types when segment changes
            segmentDropdown.on('change', function () {
                const segmentCode = $(this).val();
                if (segmentCode) {
                    loadCrateTypes(segmentCode);
                } else {
                    cratesTypeDropdown.empty().append('<option value="">-- Select Crates Type --</option>');
                }
            });

            function loadCrateTypes(segmentCode) {
                cratesTypeDropdown.html('<option value="">Loading...</option>');

                $.ajax({
                    url: '@Url.Action("GetCratesTypesForSegment", "CratesOutwardManages")',
                    type: 'GET',
                    data: { segment: segmentCode },
                    success: function (crateTypes) {
                        cratesTypeDropdown.empty();
                        if (crateTypes && crateTypes.length > 0) {
                            for (let i = 0; i < crateTypes.length; i++) {
                                const crateType = crateTypes[i];
                                cratesTypeDropdown.append(`<option value="${crateType.value}">${crateType.text}</option>`);
                            }
                        } else {
                            cratesTypeDropdown.append('<option value="">No crate types found</option>');
                        }
                    },
                    error: function () {
                        cratesTypeDropdown.empty().append('<option value="">Error loading crate types</option>');
                    }
                });
            }
        });
    </script>
}