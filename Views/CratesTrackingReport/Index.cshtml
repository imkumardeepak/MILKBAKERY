@{
    ViewData["Title"] = "Crates Tracking Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3">
    <div class="card mb-3">
        <div class="card-header text-white p-1" style="background-color:#FC2947;">
            <div class="d-flex align-items-baseline">
                <a href="/Home/Index" class="btn btn-link text-white"><i class="fa fa-arrow-left"></i></a>
                <h5 class="mx-auto text-white text-2xl font-semibold">Crates Tracking Report</h5>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-sm-3">
                    <label for="customerDropdown">Customer:</label>
                    <select id="customerDropdown" class="form-control" asp-items="@ViewBag.customer"></select>
                </div>
                <div class="form-group col-sm-3">
                    <label for="fromDate">From Date:</label>
                    <input type="date" id="fromDate" class="form-control" />
                </div>
                <div class="form-group col-sm-3">
                    <label for="toDate">To Date:</label>
                    <input type="date" id="toDate" class="form-control" />
                </div>
                <div class="form-group col-sm-3">
                    <label for="divisionDropdown">Division:</label>
                    <select id="divisionDropdown" class="form-control" asp-items="@ViewBag.division"></select>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 text-right">
                    <button id="btnGenerateReport" class="btn btn-primary">Generate Report</button>
                </div>
            </div>

            <div id="reportContainer" class="mt-3">
                <!-- Report will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#btnGenerateReport').click(function () {
                var customerId = $('#customerDropdown').val();
                var fromDate = $('#fromDate').val();
                var toDate = $('#toDate').val();
                var division = $('#divisionDropdown').val();

                $.ajax({
                    url: '@Url.Action("GetReportData", "CratesTrackingReport")',
                    type: 'POST',
                    data: {
                        customerId: customerId,
                        fromDate: fromDate,
                        toDate: toDate,
                        division: division
                    },
                    success: function (result) {
                        $('#reportContainer').html(result);
                        // Initialize DataTable
                        if (!$.fn.DataTable.isDataTable("#reportTable")) {
                            $("#reportTable").DataTable({
                                "order": [[3, "desc"]], // Sort by dispatch date descending by default
                                "pageLength": 25,
                                dom: 'Bfrtip',
                                buttons: [
                                    'copy', 'csv', 'excel', 'pdf', 'print'
                                ]
                            });
                        }
                    },
                    error: function () {
                        console.log('Error generating report');
                    }
                });
            });
        });
    </script>
}