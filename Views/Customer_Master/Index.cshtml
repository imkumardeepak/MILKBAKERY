@model IEnumerable<Milk_Bakery.Models.Customer_Master>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w-full bg-white shadow-lg rounded-lg overflow-hidden mt-2">
    <div class="bg-blue-500 px-2 py-2 flex items-center justify-between">
        <h2 class="text-white text-2xl font-semibold">Customer Master</h2>
        <a asp-action="AddOrEdit" class="h-10 w-32 rounded-sm shadow-md text-white text-[16px] hover:bg-blue-700 bg-blue-600 btn"><i class="fa fa-plus">Add</i></a>
    </div>
    <div class="p-2">
        <div class="w-screen-lg  mt-2">     
            <div class="table-responsive table-container max-h-screen overflow-y-auto">
                <table class="w-full divide-y divide-gray-200" id="dataTable">
                    <thead class="bg-gray-200 sticky top-0">
                        <tr>
                            <th scope="col" class="sticky top-0 px-2 py-2  text-xs font-medium text-black-800 uppercase tracking-wider">@Html.DisplayNameFor(model => model.Name)</th>
                            <th scope="col" class="sticky top-0 px-2 py-2  text-xs font-medium text-black-800 uppercase tracking-wider">
                                @Html.DisplayNameFor(model => model.shortname)
                            </th>
                            <th scope="col" class="sticky top-0 px-2 py-2  text-xs font-medium text-black-800 uppercase tracking-wider">@Html.DisplayNameFor(model => model.Division)</th>
                            <th scope="col" class="sticky top-0 px-2 py-2  text-xs font-medium text-black-800 uppercase tracking-wider">@Html.DisplayNameFor(model => model.phoneno)</th>
                            
                           
                            <th scope="col" class="sticky top-0 px-2 py-2  text-xs font-medium text-black-800 uppercase tracking-wider">@Html.DisplayNameFor(model => model.city)</th>
                            <th scope="col" class="sticky top-0 px-2 py-2  text-xs font-medium text-black-800 uppercase tracking-wider">@Html.DisplayNameFor(model => model.PostalCode)</th>
                            <th scope="col" class="sticky top-0 px-2 py-2  text-xs font-medium text-black-800 uppercase tracking-wider">@Html.DisplayNameFor(model => model.state)</th>
                            <th scope="col" class="sticky top-0 px-2 py-2  text-xs font-medium text-black-800 uppercase tracking-wider">Action</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="px-2 py-2  whitespace-nowrap whitespace-nowrap">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="px-2 py-2  whitespace-nowrap whitespace-nowrap">
                                    @Html.DisplayFor(modelItem => item.shortname)
                                </td>
                                <td class="px-2 py-2  whitespace-nowrap whitespace-nowrap">
                                    @Html.DisplayFor(modelItem => item.Division)
                                </td>
                                <td class="px-2 py-2  whitespace-nowrap whitespace-nowrap">
                                    @Html.DisplayFor(modelItem => item.phoneno)
                                </td>
                             
                            
                                <td class="px-2 py-2  whitespace-nowrap whitespace-nowrap">
                                    @Html.DisplayFor(modelItem => item.city)
                                </td>
                                <td class="px-2 py-2  whitespace-nowrap whitespace-nowrap">
                                    @Html.DisplayFor(modelItem => item.PostalCode)
                                </td>
                                <td class="px-2 py-2  whitespace-nowrap whitespace-nowrap">
                                    @Html.DisplayFor(modelItem => item.state)
                                </td>
                                <td class="px-3 py-2 whitespace-nowrap whitespace-nowrap">
                                    <a asp-action="AddOrEdit" asp-route-id="@item.Id" class="h-10 w-10 rounded-sm shadow-md text-white text-[16px] hover:bg-yellow-700 bg-yellow-600 btn"><i class="fas fa-pencil-alt"></i> </a>  |
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="h-10 w-10 rounded-sm shadow-md text-white text-[16px] hover:bg-red-700 bg-red-600 btn" onclick="return confirmation(this);"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                        <!-- Add more rows as needed -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
