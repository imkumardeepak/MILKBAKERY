@{
	ViewData["Title"] = "Upload Customers";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3">
    <div class="card mb-3">
        <div class="card-header text-white p-1" style="background-color:#FC2947;">
            <div class="d-flex align-items-baseline">
                <a asp-action="Index" class="btn btn-link text-white"><i class="fa fa-arrow-left"></i></a>
                <h5 class="mx-auto text-white text-2xl font-semibold">Upload Customers</h5>
            </div>
        </div>

        <div class="card-body">
            <form asp-action="Upload" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="csvFile" class="control-label font-weight-bold">Upload CSV File:</label>
                    <input type="file" name="csvFile" id="csvFile" accept=".csv" class="form-control-file" />
                    <small class="form-text text-muted">Please select a CSV file to upload.</small>
                </div>
                
                <div class="form-group text-right">
                    <input type="submit" value="Upload" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>