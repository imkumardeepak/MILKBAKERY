@model Milk_Bakery.Models.Customer_Master

@{
    ViewData["Title"] = "Customer Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3">
    <div class="card mb-3">
        <div class="card-header text-white p-1" style="background-color:#FC2947;">
            <div class="d-flex align-items-baseline">
                <a asp-action="Index" class="btn btn-link text-white"><i class="fa fa-arrow-left"></i></a>
                <h5 class="mx-auto text-white text-2xl font-semibold">@(Model.Id == 0 ? "Create Customer" : "Edit Customer")</h5>
            </div>
        </div>

        <div class="card-body">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="shortname" class="control-label font-weight-bold">Short Name <span class="text-danger">*</span></label>
                            <input asp-for="shortname" class="form-control" />
                            <span asp-validation-for="shortname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label font-weight-bold">Name <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ContactPerson" class="control-label font-weight-bold">Contact Person <span class="text-danger">*</span></label>
                            <input asp-for="ContactPerson" class="form-control" />
                            <span asp-validation-for="ContactPerson" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Division" class="control-label font-weight-bold">Division <span class="text-danger">*</span></label>
                            <select asp-for="Division" class="form-control select2" asp-items="@ViewBag.segement">
                                <option value="">-- Select Division --</option>
                            </select>
                            <span asp-validation-for="Division" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="accounttype" class="control-label font-weight-bold">Account Type <span class="text-danger">*</span></label>
                            <select asp-for="accounttype" class="form-control">
                                <option value="">-- Select Account Type --</option>
                                <option>Super Stokiest</option>
                                <option>Distrubuter</option>
                                <option>c</option>
                            </select>
                            <span asp-validation-for="accounttype" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="route" class="control-label font-weight-bold">Route <span class="text-danger">*</span></label>
                            <select asp-for="route" class="form-control select2" asp-items="@ViewBag.route">
                                <option value="">-- Select Route --</option>
                            </select>
                            <span asp-validation-for="route" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="address" class="control-label font-weight-bold">Address <span class="text-danger">*</span></label>
                    <input asp-for="address" class="form-control" />
                    <span asp-validation-for="address" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="city" class="control-label font-weight-bold">City <span class="text-danger">*</span></label>
                            <input asp-for="city" class="form-control" />
                            <span asp-validation-for="city" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="PostalCode" class="control-label font-weight-bold">Pincode <span class="text-danger">*</span></label>
                            <input asp-for="PostalCode" class="form-control" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="state" class="control-label font-weight-bold">State <span class="text-danger">*</span></label>
                            <input asp-for="state" class="form-control" />
                            <span asp-validation-for="state" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="country" class="control-label font-weight-bold">Country <span class="text-danger">*</span></label>
                            <select asp-for="country" class="form-control">
                                <option value="">-- Select Country --</option>
                                <option>India</option>
                                <option>Berlin</option>
                                <option>USA</option>
                            </select>
                            <span asp-validation-for="country" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="phoneno" class="control-label font-weight-bold">Phone Number <span class="text-danger">*</span></label>
                            <input asp-for="phoneno" class="form-control" />
                            <span asp-validation-for="phoneno" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="email" class="control-label font-weight-bold">Email</label>
                    <input asp-for="email" class="form-control" value="NA" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Sequence" class="control-label font-weight-bold">Sequence</label>
                        <input asp-for="Sequence" class="form-control" />
                        <span asp-validation-for="Sequence" class="text-danger"></span>
                    </div>
                </div>
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label font-weight-bold">Is Active</label>
                    </div>
                </div>

                <div class="form-group text-right">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Initialize Select2
            $('.select2').select2();
        });
    </script>
}