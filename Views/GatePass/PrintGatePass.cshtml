@model Milk_Bakery.ViewModels.GatePassViewModel

@{
    ViewData["Title"] = "Print Gate Pass";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            line-height: 1.2;
            margin: 5px;
            padding: 0;
            width: 80mm; /* Standard receipt printer width */
            max-width: 80mm;
        }

        .header {
            text-align: center;
            border-bottom: 1px solid #000;
            padding-bottom: 5px;
            margin-bottom: 8px;
        }

        .company-name {
            font-size: 14px;
            font-weight: bold;
            color: #FC2947;
        }

        .gate-pass-title {
            font-size: 12px;
            font-weight: bold;
            margin: 5px 0;
        }

        .vehicle-info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 8px;
        }

        .details-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 10px;
        }

            .details-table th,
            .details-table td {
                border: 1px solid #000;
                padding: 3px;
                text-align: left;
            }

            .details-table th {
                background-color: #f0f0f0;
                font-weight: bold;
            }

        .summary {
            margin-top: 8px;
            padding: 5px;
            border-top: 1px dashed #000;
            font-weight: bold;
        }

        .signature-row {
            display: flex;
            justify-content: space-between;
            margin-top: 8px;
        }

        .signature-box {
            flex: 1;
            text-align: center;
        }

            .signature-box:first-child {
                margin-right: 10px;
            }

        .print-button {
            margin: 10px 0;
            text-align: center;
        }

        .btn {
            padding: 5px 10px;
            border-radius: 3px;
            text-decoration: none;
            display: inline-block;
            margin: 0 3px;
            font-size: 12px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
            border: 1px solid #007bff;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
            border: 1px solid #6c757d;
        }

        @@media print {
            .print-button

        {
            display: none;
        }

        body {
            margin: 0;
            padding: 2mm;
        }

        }

        /* Ensure no page breaks inside important elements */
        .header, .vehicle-info, .details-table, .summary {
            page-break-inside: avoid;
        }
    </style>
</head>
<body>
    <div class="print-button">
        <button class="btn btn-primary" onclick="window.print()">Print Gate Pass</button>
        <a href="@Url.Action("Index", "GatePass")" class="btn btn-secondary">Back to List</a>
    </div>

    <div class="header">
        <div class="company-name">Haldiram Foods International Pvt. Ltd.</div>
        <div class="gate-pass-title">VEHICLE GATE PASS</div>
    </div>

    <div class="vehicle-info">
        <div><strong>Vehicle:</strong> @Model.TruckNumber</div>
        <div><strong>Date:</strong> @Model.DispatchDate.ToString("dd/MM/yy")</div>
    </div>

    <table class="details-table">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Sml</th>
                <th>Lrg</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.CustomerDetails != null && Model.CustomerDetails.Any())
            {
                @foreach (var customer in Model.CustomerDetails)
                {
                    <tr>
                        <td>@customer.CustomerName</td>
                        <td>@customer.SmallCrates</td>
                        <td>@customer.LargeCrates</td>
                    </tr>
                }
                <tr style="font-weight: bold;">
                    <td>Total: @Model.CustomerCount</td>
                    <td>@Model.CustomerDetails.Sum(c => c.SmallCrates)</td>
                    <td>@Model.CustomerDetails.Sum(c => c.LargeCrates)</td>
                </tr>
            }
            else
            {
                <tr>
                    <td colspan="3">No customer details</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="summary">
        <div class="signature-row">
            <div class="signature-box">
                Driver Signature<br>
                ___________________
            </div>
            <div class="signature-box">
                Security Signature<br>
                ___________________
            </div>
        </div>
    </div>
</body>
</html>