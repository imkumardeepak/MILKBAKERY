@model Milk_Bakery.ViewModels.GatePassViewModel

@{
    ViewData["Title"] = "Print Gate Pass";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/Vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f8f9fa;
        }

        .header {
            text-align: center;
            border-bottom: 2px solid #000;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .company-name {
            font-size: 28px;
            font-weight: bold;
            color: #FC2947;
        }

        .gate-pass-title {
            font-size: 24px;
            font-weight: bold;
            margin: 15px 0;
            color: #333;
        }

        .details-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

            .details-table th, .details-table td {
                border: 1px solid #ddd;
                padding: 12px;
                text-align: left;
            }

            .details-table th {
                background-color: #FC2947;
                color: white;
                font-weight: bold;
            }

            .details-table tbody tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            .details-table tbody tr:hover {
                background-color: #e9ecef;
            }

        .summary {
            margin-top: 20px;
            text-align: right;
            padding: 15px;
            background-color: #f8f9fa;
            border-radius: 5px;
        }

        .print-button {
            margin: 20px 0;
            text-align: center;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            margin: 0 5px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
            border: 1px solid #007bff;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
            border: 1px solid #6c757d;
        }

        .btn:hover {
            opacity: 0.8;
            cursor: pointer;
        }

        @@media print {
            .print-button {
                display: none;
            }
            
            body {
                background-color: white;
            }
        }
    </style>
</head>
<body>
    <div class="print-button">
        <button class="btn btn-primary" onclick="window.print()">
            <i class="fas fa-print"></i> Print Gate Pass
        </button>
        <a href="@Url.Action("Index", "GatePass")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="header">
        <div class="company-name">HALDIRAM MILK & BAKERY</div>
        <div class="gate-pass-title">GATE PASS</div>
        <div><strong>Truck Number:</strong> @Model.TruckNumber</div>
        <div><strong>Dispatch Date:</strong> @Model.DispatchDate.ToString("dd/MM/yyyy")</div>
    </div>

    <table class="details-table">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Small Crates</th>
                <th>Large Crates</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.CustomerDetails != null && Model.CustomerDetails.Any())
            {
                @foreach (var customer in Model.CustomerDetails)
                {
                    <tr>
                        <td>@customer.CustomerName</td>
                        <td>@customer.SmallCrates</td>
                        <td>@customer.LargeCrates</td>
                    </tr>
                }
                <tr style="background-color: #e9ecef; font-weight: bold;">
                    <td>Total Customers: @Model.CustomerCount</td>
                    <td>@Model.CustomerDetails.Sum(c => c.SmallCrates)</td>
                    <td>@Model.CustomerDetails.Sum(c => c.LargeCrates)</td>
                </tr>
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No customer details available</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="summary">
        <h5>Summary</h5>
        <p><strong>Total Customers:</strong> @Model.CustomerCount</p>
        <p><strong>Total Small Crates:</strong> @(Model.CustomerDetails?.Sum(c => c.SmallCrates) ?? 0)</p>
        <p><strong>Total Large Crates:</strong> @(Model.CustomerDetails?.Sum(c => c.LargeCrates) ?? 0)</p>
    </div>

    <script src="~/Vendor/jquery/jquery.min.js"></script>
    <script src="~/Vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>