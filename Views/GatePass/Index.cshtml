@model Milk_Bakery.ViewModels.GatePassIndexViewModel

@{
    ViewData["Title"] = "Gate Pass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3">
    <div class="card mb-3">
        <div class="card-header bg-blue-500 text-white">
            <div class="d-flex align-items-baseline">
                <h5 class="mx-auto text-white text-2xl font-semibold">Gate Pass</h5>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="dispatchDateFilter" class="form-label font-weight-bold">Dispatch Date:</label>
                    <input type="date" id="dispatchDateFilter" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button id="filterBtn" type="submit" class="btn btn-primary">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                </div>
            </div>
            
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-sm" id="gatePassTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Truck Number</th>
                            <th>Dispatch Date</th>
                            <th>Total Customer Count</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.GroupedData != null && Model.GroupedData.Any())
                        {
                            @foreach (var item in Model.GroupedData)
                            {
                                <tr>
                                    <td>@item.TruckNumber</td>
                                    <td>@item.DispatchDate.ToString("dd/MM/yyyy")</td>
                                    <td>@item.CustomerCount</td>
                                    <td>
                                        <a href="@Url.Action("PrintGatePass", "GatePass", new { truckNumber = item.TruckNumber, date = item.DispatchDate.ToString("yyyy-MM-dd") })" 
                                           class="btn btn-primary btn-sm">
                                            <i class="fas fa-print"></i> Print Gate Pass
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">No gate pass data available</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            try {
                console.log("Document ready function executed");
                
                // Initialize DataTable
                var dataTable = $('#gatePassTable').DataTable({
                    "pageLength": 25,
                    "columnDefs": [
                        { "orderable": false, "targets": [3] } // Disable sorting on Action column
                    ]
                });
                
                // Store the URL for AJAX calls
                var getGatePassDataUrl = '@Url.Action("GetGatePassDataByDate", "GatePass")';
                
                // Log elements to check if they exist
                console.log("Filter button:", $('#filterBtn'));
                console.log("Date input:", $('#dispatchDateFilter'));
                
                // Check if elements exist before attaching events
                if ($('#filterBtn').length > 0) {
                    console.log("Attaching click event to filter button");
                    // Remove any existing click events first
                    $('#filterBtn').off('click').on('click', function (e) {
                        try {
                            e.preventDefault();
                            console.log("Filter button clicked");
                            var selectedDate = $('#dispatchDateFilter').val();
                            console.log("Selected date:", selectedDate);
                            filterGatePassData(selectedDate);
                        } catch (error) {
                            console.error("Error in filter button click handler:", error);
                        }
                    });
                } else {
                    console.log("Filter button not found");
                }
                
                if ($('#dispatchDateFilter').length > 0) {
                    console.log("Attaching change event to date input");
                    // Remove any existing change events first
                    $('#dispatchDateFilter').off('change').on('change', function () {
                        try {
                            console.log("Date changed");
                            var selectedDate = $(this).val();
                            console.log("New date value:", selectedDate);
                            filterGatePassData(selectedDate);
                        } catch (error) {
                            console.error("Error in date change handler:", error);
                        }
                    });
                } else {
                    console.log("Date input not found");
                }
                
                // Function to filter gate pass data by date
                function filterGatePassData(date) {
                    try {
                        console.log("filterGatePassData called with date:", date);
                        
                        // Validate date format
                        if (!date || date === '') {
                            console.log("No date selected");
                            // Show message to user
                            dataTable.clear().draw();
                            dataTable.row.add([
                                '<td colspan="4" class="text-center">Please select a date to filter gate pass data</td>'
                            ]).draw(false);
                            return;
                        }
                        
                        // Show loading indicator
                        dataTable.clear().draw();
                        dataTable.row.add([
                            '<td colspan="4" class="text-center"><i class="fas fa-spinner fa-spin"></i> Loading...</td>'
                        ]).draw(false);
                        
                        // Make AJAX call to get filtered data
                        $.ajax({
                            url: getGatePassDataUrl,
                            type: 'GET',
                            data: { date: date },
                            success: function (result) {
                                try {
                                    console.log("AJAX success, result:", result);
                                    // Clear existing data
                                    dataTable.clear().draw();
                                    
                                    if (result.success && result.data && result.data.length > 0) {
                                        // Add new data to table
                                        $.each(result.data, function (index, item) {
                                            // Parse the date properly
                                            var dispatchDate = new Date(item.dispatchDate);
                                            var formattedDate = dispatchDate.toLocaleDateString('en-GB');
                                            
                                            // Create print URL
                                            var printUrl = '@Url.Action("PrintGatePass", "GatePass")?truckNumber=' + encodeURIComponent(item.truckNumber) + 
                                                           '&date=' + encodeURIComponent(dispatchDate.toISOString().split('T')[0]);
                                            
                                            // Add row to table
                                            dataTable.row.add([
                                                item.truckNumber,
                                                formattedDate,
                                                item.customerCount,
                                                '<a href="' + printUrl + '" class="btn btn-primary btn-sm"><i class="fas fa-print"></i> Print Gate Pass</a>'
                                            ]).draw(false);
                                        });
                                    } else {
                                        // Show no data message
                                        dataTable.row.add([
                                            '<td colspan="4" class="text-center">No gate pass data available for the selected date</td>'
                                        ]).draw(false);
                                    }
                                } catch (error) {
                                    console.error("Error in AJAX success handler:", error);
                                }
                            },
                            error: function (xhr, status, error) {
                                console.log("AJAX error:", error);
                                console.log("Status:", status);
                                console.log("Response:", xhr);
                                
                                // Clear existing data
                                dataTable.clear().draw();
                                
                                // Show error message
                                dataTable.row.add([
                                    '<td colspan="4" class="text-center">Error loading data. Please try again.</td>'
                                ]).draw(false);
                            }
                        });
                    } catch (error) {
                        console.error("Error in filterGatePassData function:", error);
                    }
                }
            } catch (error) {
                console.error("Error in document ready function:", error);
            }
        });
    </script>
}