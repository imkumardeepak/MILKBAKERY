@model Milk_Bakery.ViewModels.GatePassIndexViewModel

@{
    ViewData["Title"] = "Gate Pass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3">
    <div class="card mb-3">
        <div class="card-header bg-blue-500 text-white">
            <div class="d-flex align-items-baseline">
                <h5 class="mx-auto text-white text-2xl font-semibold">Gate Pass</h5>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="dispatchDateFilter" class="form-label font-weight-bold">Dispatch Date:</label>
                    <input type="date" id="dispatchDateFilter" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button id="filterBtn" type="button" class="btn btn-primary">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                </div>
            </div>
            
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-sm" id="gatePassTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Truck Number</th>
                            <th>Dispatch Date</th>
                            <th>Total Customer Count</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.GroupedData != null && Model.GroupedData.Any())
                        {
                            @foreach (var item in Model.GroupedData)
                            {
                                <tr class="@(item.GatePassGenerated ? "table-success" : "")">
                                    <td>@item.TruckNumber</td>
                                    <td>@item.DispatchDate.ToString("dd/MM/yyyy")</td>
                                    <td>@item.CustomerCount</td>
                                    <td>
                                        @if (item.GatePassGenerated)
                                        {
                                            <span class="badge bg-success">Generated</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("PrintGatePass", "GatePass", new { truckNumber = item.TruckNumber, date = item.DispatchDate.ToString("yyyy-MM-dd") })" 
                                           class="btn btn-primary btn-sm">
                                            <i class="fas fa-print"></i> Print Gate Pass
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">No gate pass data available</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            try {
                console.log("Document ready function executed");
                
                // Initialize DataTable
                var dataTable = $('#gatePassTable').DataTable({
                    "pageLength": 25,
                    "columnDefs": [
                        { "orderable": false, "targets": [4] }, // Disable sorting on Action column (now column 4)
                        { "type": "status", "targets": [3] }   // Set custom sorting type for Status column
                    ],
                    "order": [[ 3, "desc" ]] // Sort by Status column (index 3) in descending order by default (Generated first)
                });

                // Custom sorting function for the status column
                $.fn.dataTable.ext.type.order['status-pre'] = function(data) {
                    // Extract text from the badge HTML
                    var text = $(data).text();
                    return (text === 'Generated') ? 1 : 0;
                };
                
                // Store the URL for AJAX calls
                var getGatePassDataUrl = '@Url.Action("GetGatePassDataByDate", "GatePass")';
                
                // Attach events to filter button and date input
                $('#filterBtn').off('click').on('click', function (e) {
                    e.preventDefault();
                    var selectedDate = $('#dispatchDateFilter').val();
                    filterGatePassData(selectedDate);
                });
                
                $('#dispatchDateFilter').off('change').on('change', function () {
                    var selectedDate = $(this).val();
                    filterGatePassData(selectedDate);
                });
                
                // Function to filter gate pass data by date
                function filterGatePassData(date) {
                    // Validate date format
                    if (!date || date === '') {
                        dataTable.clear().draw();
                        dataTable.row.add([
                            '<td colspan="5" class="text-center">Please select a date to filter gate pass data</td>'
                        ]).draw(false);
                        return;
                    }

                    // Show loading indicator
                    dataTable.clear().draw();
                    dataTable.row.add([
                        '<td colspan="5" class="text-center"><i class="fas fa-spinner fa-spin"></i> Loading...</td>'
                    ]).draw(false);
                    
                    // Make AJAX call to get filtered data
                    $.ajax({
                        url: getGatePassDataUrl,
                        type: 'GET',
                        data: { date: date },
                        success: function (result) {
                            // Clear existing data
                            dataTable.clear().draw();
                            
                            if (result.success && result.data && result.data.length > 0) {
                                // Add new data to table
                                $.each(result.data, function (index, item) {
                                    // Parse the date properly
                                    var dispatchDate = new Date(item.dispatchDate);
                                    var formattedDate = dispatchDate.toLocaleDateString('en-GB');
                                    
                                    // Create print URL with proper encoding
                                    var printUrl = '@Url.Action("PrintGatePass", "GatePass")?truckNumber=' + encodeURIComponent(item.truckNumber) + 
                                                   '&date=' + encodeURIComponent(item.dispatchDate.split('T')[0]);
                                    
                                    // Add row to table
                                    var rowNode = dataTable.row.add([
                                        item.truckNumber,
                                        formattedDate,
                                        item.customerCount,
                                        item.gatePassGenerated ? 
                                            '<span class="badge bg-success">Generated</span>' : 
                                            '<span class="badge bg-warning text-dark">Pending</span>',
                                        '<a href="' + printUrl + '" class="btn btn-primary btn-sm"><i class="fas fa-print"></i> Print Gate Pass</a>'
                                    ]).draw(false).node();

                                    // Apply row coloring based on gate pass status
                                    if (item.gatePassGenerated) {
                                        $(rowNode).addClass('table-success');
                                    }

                                    // Re-apply sorting
                                    dataTable.order([3, 'desc']).draw();
                                });
                            } else {
                                // Show no data message
                                dataTable.row.add([
                                    '<td colspan="5" class="text-center">No gate pass data available for the selected date</td>'
                                ]).draw(false);
                            }
                        },
                        error: function (xhr, status, error) {
                            // Clear existing data
                            dataTable.clear().draw();
                            
                            // Show error message
                            dataTable.row.add([
                                '<td colspan="5" class="text-center">Error loading data. Please try again.</td>'
                            ]).draw(false);
                        }
                    });
                }
            } catch (error) {
                console.error("Error in document ready function:", error);
            }
        });
    </script>
}